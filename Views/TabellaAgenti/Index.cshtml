@model IEnumerable<AiDbMaster.Models.TabellaAgenti>

@{
    ViewData["Title"] = "Gestione Agenti";
    ViewBag.UseFluidContainer = true;
    var search = ViewBag.CurrentSearch as string ?? "";
    var provincia = ViewBag.CurrentProvincia as string ?? "";
    var attivo = ViewBag.CurrentAttivo as bool?;
    var sortOrder = ViewBag.CurrentSort as string ?? "codice";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var totalCount = ViewBag.TotalCount as int? ?? 0;
    var pageSize = ViewBag.PageSize as int? ?? 50;
    var province = ViewBag.Province as List<string> ?? new List<string>();
    var totaleAttivi = ViewBag.TotaleAttivi as int? ?? 0;
    var totaleInattivi = ViewBag.TotaleInattivi as int? ?? 0;
    var totaleConIndirizzo = ViewBag.TotaleConIndirizzo as int? ?? 0;
    var provinceDistinte = ViewBag.ProvinceDistinte as int? ?? 0;
}

<div class="container-fluid">


    <div class="content-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-person-workspace me-2 text-primary"></i>Gestione Agenti</h2>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-secondary" onclick="resetFilters()">
                    <i class="bi bi-arrow-clockwise"></i> Reset Filtri
                </button>
                <button type="button" class="btn btn-success" onclick="exportToExcel()">
                    <i class="bi bi-file-earmark-excel"></i> Esporta Excel
                </button>
            </div>
        </div>

        <!-- Filtri -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filtri di Ricerca</h5>
            </div>
            <div class="card-body">
                <form method="get" asp-action="Index" id="filterForm">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label for="search" class="form-label">Ricerca Generale</label>
                            <input type="text" class="form-control" id="search" name="search" value="@search" 
                                   placeholder="Codice, nome, città, provincia...">
                        </div>
                        <div class="col-md-2">
                            <label for="provincia" class="form-label">Provincia</label>
                            <select class="form-select" id="provincia" name="provincia">
                                <option value="">Tutte le province</option>
                                @foreach (var prov in province)
                                {
                                    <option value="@prov" selected="@(provincia == prov)">@prov</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="attivo" class="form-label">Stato</label>
                            <select class="form-select" id="attivo" name="attivo">
                                <option value="">Tutti gli stati</option>
                                <option value="true" selected="@(attivo == true)">Attivi</option>
                                <option value="false" selected="@(attivo == false)">Inattivi</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="pageSize" class="form-label">Elementi per pagina</label>
                            <select class="form-select" id="pageSize" name="pageSize">
                                <option value="25" selected="@(pageSize == 25)">25</option>
                                <option value="50" selected="@(pageSize == 50)">50</option>
                                <option value="100" selected="@(pageSize == 100)">100</option>
                                <option value="200" selected="@(pageSize == 200)">200</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search"></i> Cerca
                            </button>
                        </div>
                    </div>
                    <input type="hidden" name="sortOrder" value="@sortOrder">
                    <input type="hidden" name="page" value="1">
                </form>
            </div>
        </div>

        <!-- Statistiche -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Totale Agenti</h6>
                                <h3 class="mb-0">@totalCount</h3>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-person-workspace" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Agenti Attivi</h6>
                                <h3 class="mb-0">@totaleAttivi</h3>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-check-circle-fill" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-secondary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Agenti Inattivi</h6>
                                <h3 class="mb-0">@totaleInattivi</h3>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-x-circle-fill" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Province</h6>
                                <h3 class="mb-0">@provinceDistinte</h3>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-geo-alt-fill" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabella Agenti -->
        <div class="card">
            <div class="card-header bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Elenco Agenti</h5>
                    <small class="text-muted">
                        Visualizzati @(Model?.Count() ?? 0) di @totalCount agenti
                    </small>
                </div>
            </div>
            <div class="card-body p-0">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0" id="agentiTable">
                            <thead class="table-dark sticky-top">
                                <tr>
                                    <th>
                                        <a asp-action="Index" 
                                           asp-route-search="@search"
                                           asp-route-provincia="@provincia"
                                           asp-route-attivo="@attivo"
                                           asp-route-pageSize="@pageSize"
                                           asp-route-sortOrder="@(sortOrder == "codice" ? "codice_desc" : "codice")"
                                           class="text-white text-decoration-none">
                                            Codice
                                            @if (sortOrder == "codice")
                                            {
                                                <i class="bi bi-arrow-up"></i>
                                            }
                                            else if (sortOrder == "codice_desc")
                                            {
                                                <i class="bi bi-arrow-down"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" 
                                           asp-route-search="@search"
                                           asp-route-provincia="@provincia"
                                           asp-route-attivo="@attivo"
                                           asp-route-pageSize="@pageSize"
                                           asp-route-sortOrder="@(sortOrder == "nome" ? "nome_desc" : "nome")"
                                           class="text-white text-decoration-none">
                                            Nome Agente
                                            @if (sortOrder == "nome")
                                            {
                                                <i class="bi bi-arrow-up"></i>
                                            }
                                            else if (sortOrder == "nome_desc")
                                            {
                                                <i class="bi bi-arrow-down"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" 
                                           asp-route-search="@search"
                                           asp-route-provincia="@provincia"
                                           asp-route-attivo="@attivo"
                                           asp-route-pageSize="@pageSize"
                                           asp-route-sortOrder="@(sortOrder == "citta" ? "citta_desc" : "citta")"
                                           class="text-white text-decoration-none">
                                            Città
                                            @if (sortOrder == "citta")
                                            {
                                                <i class="bi bi-arrow-up"></i>
                                            }
                                            else if (sortOrder == "citta_desc")
                                            {
                                                <i class="bi bi-arrow-down"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" 
                                           asp-route-search="@search"
                                           asp-route-provincia="@provincia"
                                           asp-route-attivo="@attivo"
                                           asp-route-pageSize="@pageSize"
                                           asp-route-sortOrder="@(sortOrder == "provincia" ? "provincia_desc" : "provincia")"
                                           class="text-white text-decoration-none">
                                            Prov.
                                            @if (sortOrder == "provincia")
                                            {
                                                <i class="bi bi-arrow-up"></i>
                                            }
                                            else if (sortOrder == "provincia_desc")
                                            {
                                                <i class="bi bi-arrow-down"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>Indirizzo</th>
                                    <th>
                                        <a asp-action="Index" 
                                           asp-route-search="@search"
                                           asp-route-provincia="@provincia"
                                           asp-route-attivo="@attivo"
                                           asp-route-pageSize="@pageSize"
                                           asp-route-sortOrder="@(sortOrder == "stato" ? "stato_desc" : "stato")"
                                           class="text-white text-decoration-none">
                                            Stato
                                            @if (sortOrder == "stato")
                                            {
                                                <i class="bi bi-arrow-up"></i>
                                            }
                                            else if (sortOrder == "stato_desc")
                                            {
                                                <i class="bi bi-arrow-down"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>Azioni</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="agente-row">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-person-badge me-2 text-primary"></i>
                                                <strong>@Html.DisplayFor(modelItem => item.CodiceAgente)</strong>
                                            </div>
                                        </td>
                                        <td>
                                            <div>
                                                @if (!string.IsNullOrEmpty(item.DescrizioneAgente))
                                                {
                                                    <div class="fw-bold">@Html.DisplayFor(modelItem => item.DescrizioneAgente)</div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted fst-italic">Nome non specificato</span>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.CittaAgente))
                                            {
                                                <span>@Html.DisplayFor(modelItem => item.CittaAgente)</span>
                                                @if (!string.IsNullOrEmpty(item.CapAgente))
                                                {
                                                    <br><small class="text-muted">@Html.DisplayFor(modelItem => item.CapAgente)</small>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.ProvinciaAgente))
                                            {
                                                <span class="badge bg-info text-white">@Html.DisplayFor(modelItem => item.ProvinciaAgente)</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.IndirizzoAgente))
                                            {
                                                <div class="small">
                                                    <i class="bi bi-house me-1"></i>
                                                    <span class="text-truncate" style="max-width: 150px; display: inline-block;" 
                                                          title="@item.IndirizzoAgente">@item.IndirizzoAgente</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="@item.StatoAgenteCssClass">@item.StatoAgente</span>
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-action="Details" asp-route-id="@item.CodiceAgente" 
                                                   class="btn btn-sm btn-outline-info" title="Visualizza Dettagli">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-secondary" 
                                                        onclick="copyToClipboard('@item.CodiceAgente')" title="Copia Codice">
                                                    <i class="bi bi-clipboard"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Paginazione -->
                    @if (totalPages > 1)
                    {
                        <div class="card-footer">
                            <nav aria-label="Navigazione pagine">
                                <ul class="pagination justify-content-center mb-0">
                                    @if (currentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-provincia="@provincia"
                                               asp-route-attivo="@attivo"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="1">
                                                <i class="bi bi-chevron-double-left"></i>
                                            </a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-provincia="@provincia"
                                               asp-route-attivo="@attivo"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="@(currentPage - 1)">
                                                <i class="bi bi-chevron-left"></i>
                                            </a>
                                        </li>
                                    }

                                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == currentPage ? "active" : "")">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-provincia="@provincia"
                                               asp-route-attivo="@attivo"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="@i">@i</a>
                                        </li>
                                    }

                                    @if (currentPage < totalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-provincia="@provincia"
                                               asp-route-attivo="@attivo"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="@(currentPage + 1)">
                                                <i class="bi bi-chevron-right"></i>
                                            </a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-provincia="@provincia"
                                               asp-route-attivo="@attivo"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="@totalPages">
                                                <i class="bi bi-chevron-double-right"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    }
                }
                else
                {
                    <div class="p-5 text-center">
                        <i class="bi bi-inbox text-primary" style="font-size: 4rem;"></i>
                        <h4 class="mt-3">Nessun agente trovato</h4>
                        @if (!string.IsNullOrEmpty(search) || !string.IsNullOrEmpty(provincia) || attivo.HasValue)
                        {
                            <p class="text-muted">Prova a modificare i filtri di ricerca per visualizzare più risultati.</p>
                            <button type="button" class="btn btn-outline-primary mt-3" onclick="resetFilters()">
                                <i class="bi bi-arrow-clockwise"></i> Reset Filtri
                            </button>
                        }
                        else
                        {
                            <p class="text-muted">Non ci sono agenti configurati nel sistema.</p>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Reset dei filtri
        function resetFilters() {
            window.location.href = '@Url.Action("Index", "TabellaAgenti")';
        }

        // Copia negli appunti
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                showToast('Codice copiato negli appunti: ' + text, 'success');
            }).catch(function(err) {
                console.error('Errore nella copia: ', err);
                showToast('Errore nella copia del codice', 'error');
            });
        }

        // Funzione per mostrare toast
        function showToast(message, type) {
            const toastContainer = document.getElementById('toast-container') || createToastContainer();
            const toast = document.createElement('div');
            toast.className = `toast align-items-center text-white bg-${type === 'success' ? 'success' : 'danger'} border-0`;
            toast.setAttribute('role', 'alert');
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">${message}</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            `;
            toastContainer.appendChild(toast);
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
            
            toast.addEventListener('hidden.bs.toast', function() {
                toast.remove();
            });
        }

        // Crea il container per i toast se non esiste
        function createToastContainer() {
            const container = document.createElement('div');
            container.id = 'toast-container';
            container.className = 'toast-container position-fixed bottom-0 end-0 p-3';
            container.style.zIndex = '1055';
            document.body.appendChild(container);
            return container;
        }

        // Esportazione Excel (placeholder)
        function exportToExcel() {
            showToast('Funzionalità di esportazione Excel da implementare', 'info');
        }

        // Auto-submit del form quando cambiano i filtri
        $(document).ready(function() {
            $('#provincia, #attivo, #pageSize').change(function() {
                $('#filterForm').submit();
            });

            // Ricerca in tempo reale con debounce
            let searchTimeout;
            $('#search').on('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(function() {
                    $('#filterForm').submit();
                }, 500);
            });

            // Evidenzia i termini di ricerca
            @if (!string.IsNullOrEmpty(search))
            {
                <text>
                highlightSearchTerms('@Html.Raw(Html.Encode(search))');
                </text>
            }
        });

        // Funzione per evidenziare i termini di ricerca
        function highlightSearchTerms(searchTerm) {
            if (!searchTerm) return;
            
            const regex = new RegExp(`(${searchTerm.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
            $('.agente-row').each(function() {
                const $row = $(this);
                $row.find('td').each(function() {
                    const $cell = $(this);
                    const html = $cell.html();
                    const highlightedHtml = html.replace(regex, '<mark class="bg-warning">$1</mark>');
                    $cell.html(highlightedHtml);
                });
            });
        }
    </script>
}
