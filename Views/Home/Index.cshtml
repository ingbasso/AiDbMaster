@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="hero-section py-5 mb-5">
    <div class="container">
        <div class="row align-items-center min-vh-37">
            <!-- Left Column - Content -->
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="display-3 fw-bold mb-4 d-flex align-items-center justify-content-start" style="color: var(--orange-dark);">
                        Ai<i class="bi bi-robot mx-2" style="font-size: 3.5rem; color: var(--orange-dark);"></i>DbMaster
                    </h1>
                    <p class="lead fs-3" style="color: #666;">Sistema AI di gestione richieste</p>
                </div>
            </div>
            
            <!-- Right Column - Image -->
            <div class="col-lg-6 d-none d-lg-block">
                <div class="hero-image text-center">
                    <div class="image-container" style="position: relative; max-width: 500px; margin: 0 auto;">
                        <!-- Database Icon with AI Elements -->
                        <div class="database-visual" style="background: linear-gradient(135deg, var(--orange-light), var(--orange-medium)); border-radius: 20px; padding: 3rem; box-shadow: 0 20px 40px rgba(255, 133, 51, 0.2);">
                            <!-- Main Database Icon -->
                            <div class="main-icon mb-4">
                                <i class="bi bi-database-fill" style="font-size: 5rem; color: var(--orange-dark);"></i>
                            </div>
                            
                            <!-- AI Brain Icon -->
                            <div class="ai-brain" style="position: absolute; top: 20px; right: 20px; background: white; border-radius: 50%; padding: 15px; box-shadow: 0 5px 15px rgba(0,0,0,0.1);">
                                <i class="bi bi-cpu" style="font-size: 2rem; color: var(--orange-dark);"></i>
                            </div>
                            
                            <!-- Query Bubbles -->
                            <div class="query-bubbles">
                                <div class="bubble bubble-1" style="position: absolute; top: 60px; left: 30px; background: white; padding: 10px 15px; border-radius: 20px; font-size: 0.8rem; color: #666; box-shadow: 0 3px 10px rgba(0,0,0,0.1);">
                                    SELECT *
                                </div>
                                <div class="bubble bubble-2" style="position: absolute; bottom: 80px; right: 40px; background: white; padding: 10px 15px; border-radius: 20px; font-size: 0.8rem; color: #666; box-shadow: 0 3px 10px rgba(0,0,0,0.1);">
                                    WHERE...
                                </div>
                                <div class="bubble bubble-3" style="position: absolute; bottom: 40px; left: 50px; background: white; padding: 10px 15px; border-radius: 20px; font-size: 0.8rem; color: #666; box-shadow: 0 3px 10px rgba(0,0,0,0.1);">
                                    COUNT()
                                </div>
                            </div>
                            
                            <!-- Connection Lines -->
                            <div class="connections">
                                <div style="position: absolute; top: 50%; left: 50%; width: 2px; height: 60px; background: var(--orange-medium); transform: translate(-50%, -50%) rotate(45deg); opacity: 0.6;"></div>
                                <div style="position: absolute; top: 50%; left: 50%; width: 2px; height: 60px; background: var(--orange-medium); transform: translate(-50%, -50%) rotate(-45deg); opacity: 0.6;"></div>
                            </div>
                            
                            <!-- Data Flow Animation -->
                            <div class="data-flow" style="position: absolute; bottom: 20px; left: 50%; transform: translateX(-50%); display: flex; gap: 5px;">
                                <div class="dot" style="width: 8px; height: 8px; background: var(--orange-dark); border-radius: 50%; animation: pulse 2s infinite;"></div>
                                <div class="dot" style="width: 8px; height: 8px; background: var(--orange-dark); border-radius: 50%; animation: pulse 2s infinite 0.3s;"></div>
                                <div class="dot" style="width: 8px; height: 8px; background: var(--orange-dark); border-radius: 50%; animation: pulse 2s infinite 0.6s;"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






