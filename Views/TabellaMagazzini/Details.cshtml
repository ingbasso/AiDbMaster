@model AiDbMaster.Models.TabellaMagazzini

@{
    ViewData["Title"] = "Dettagli Magazzino";
    var altriMagazzini = ViewBag.AltriMagazzini as List<AiDbMaster.Models.TabellaMagazzini> ?? new List<AiDbMaster.Models.TabellaMagazzini>();
    var statisticheProgressivi = ViewBag.StatisticheProgressivi;
    var topArticoli = ViewBag.TopArticoli as List<AiDbMaster.Models.ProgressiviArticoli> ?? new List<AiDbMaster.Models.ProgressiviArticoli>();
    var articoliEsauriti = ViewBag.ArticoliEsauriti as List<AiDbMaster.Models.ProgressiviArticoli> ?? new List<AiDbMaster.Models.ProgressiviArticoli>();
}

<div class="container">


    <div class="content-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-building me-2 text-primary"></i>Dettagli Magazzino</h2>
            <div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Torna all'elenco
                </a>
            </div>
        </div>

        <div class="row">
            <!-- Informazioni Principali -->
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-building me-2"></i>Informazioni Principali</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">ID Sistema</label>
                                    <div class="form-control-plaintext bg-light p-3 rounded text-center">
                                        <span class="badge bg-dark fs-4">#@Html.DisplayFor(model => model.Id)</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.CodiceMagazzino)</label>
                                    <div class="form-control-plaintext bg-light p-3 rounded">
                                        <i class="bi bi-building me-2 text-primary"></i>
                                        <strong class="fs-3">@Html.DisplayFor(model => model.CodiceMagazzino)</strong>
                                        <button type="button" class="btn btn-sm btn-outline-secondary ms-2" 
                                                onclick="copyToClipboard('@Model.CodiceMagazzino')" title="Copia Codice">
                                            <i class="bi bi-clipboard"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.DescrizioneMagazzino)</label>
                            <div class="form-control-plaintext bg-light p-3 rounded">
                                @if (!string.IsNullOrEmpty(Model.DescrizioneMagazzino))
                                {
                                    <strong class="fs-5">@Html.DisplayFor(model => model.DescrizioneMagazzino)</strong>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Descrizione non specificata</span>
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Nome Completo</label>
                            <div class="form-control-plaintext bg-light p-2 rounded">
                                <span class="@Model.BadgeCssClass me-2">@Model.BadgeText</span>
                                <strong>@Model.NomeCompleto</strong>
                                <button type="button" class="btn btn-sm btn-outline-secondary ms-2" 
                                        onclick="copyToClipboard('@Model.NomeCompleto')" title="Copia Nome Completo">
                                    <i class="bi bi-clipboard"></i>
                                </button>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Stato Configurazione</label>
                            <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                @if (Model.HasDescrizione)
                                {
                                    <span class="badge bg-success fs-6">
                                        <i class="bi bi-check-circle me-1"></i>Configurazione Completa
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark fs-6">
                                        <i class="bi bi-exclamation-triangle me-1"></i>Configurazione Incompleta
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Statistiche Articoli -->
                @if (statisticheProgressivi != null)
                {
                    <div class="card mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="bi bi-boxes me-2"></i>Statistiche Articoli in Magazzino</h5>
                        </div>
                        <div class="card-body">
                            <div class="row text-center mb-4">
                                <div class="col-md-3">
                                    <div class="p-3 bg-light rounded">
                                        <h4 class="text-primary mb-1">@statisticheProgressivi.TotaleArticoli</h4>
                                        <small class="text-muted">Articoli Totali</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="p-3 bg-light rounded">
                                        <h4 class="text-success mb-1">@statisticheProgressivi.TotaleEsistenza.ToString("N0")</h4>
                                        <small class="text-muted">Esistenza Totale</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="p-3 bg-light rounded">
                                        <h4 class="text-info mb-1">@statisticheProgressivi.TotaleDisponibile.ToString("N0")</h4>
                                        <small class="text-muted">Disponibile</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="p-3 bg-light rounded">
                                        <h4 class="text-warning mb-1">@statisticheProgressivi.TotaleImpegnato.ToString("N0")</h4>
                                        <small class="text-muted">Impegnato</small>
                                    </div>
                                </div>
                            </div>

                            <div class="row text-center">
                                <div class="col-md-4">
                                    <div class="p-2 border rounded">
                                        <h5 class="text-secondary mb-1">@statisticheProgressivi.TotaleOrdinato.ToString("N0")</h5>
                                        <small class="text-muted">Ordinato</small>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="p-2 border rounded">
                                        <h5 class="text-success mb-1">@statisticheProgressivi.ArticoliDisponibili</h5>
                                        <small class="text-muted">Articoli Disponibili</small>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="p-2 border rounded">
                                        <h5 class="text-danger mb-1">@statisticheProgressivi.ArticoliEsauriti</h5>
                                        <small class="text-muted">Articoli Esauriti</small>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-3">
                                <a asp-controller="ProgressiviArticoli" asp-action="Index" asp-route-codiceMagazzino="@Model.CodiceMagazzino" 
                                   class="btn btn-outline-primary">
                                    <i class="bi bi-boxes me-2"></i>Visualizza Tutti gli Articoli
                                </a>
                            </div>
                        </div>
                    </div>
                }

                <!-- Top Articoli per Esistenza -->
                @if (topArticoli.Any())
                {
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="bi bi-trophy me-2"></i>Top Articoli per Esistenza</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Pos.</th>
                                            <th>Codice Articolo</th>
                                            <th>Esistenza</th>
                                            <th>Disponibile</th>
                                            <th>Stato</th>
                                            <th>Azioni</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < topArticoli.Count; i++)
                                        {
                                            var articolo = topArticoli[i];
                                            <tr>
                                                <td>
                                                    <span class="badge bg-warning text-dark">@(i + 1)</span>
                                                </td>
                                                <td>
                                                    <i class="bi bi-box me-1 text-primary"></i>
                                                    <strong>@articolo.CodiceArticolo</strong>
                                                </td>
                                                <td>
                                                    <strong class="text-primary">@articolo.Esistenza.ToString("N2")</strong>
                                                </td>
                                                <td>
                                                    <strong class="@(articolo.Disponibile > 0 ? "text-success" : "text-danger")">
                                                        @articolo.Disponibile.ToString("N2")
                                                    </strong>
                                                </td>
                                                <td>
                                                    <span class="@articolo.StatoGiacenzaCssClass">@articolo.StatoGiacenza</span>
                                                </td>
                                                <td>
                                                    <a asp-controller="ProgressiviArticoli" asp-action="Details" asp-route-id="@articolo.Id" 
                                                       class="btn btn-sm btn-outline-info" title="Dettagli Articolo">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }

                <!-- Articoli Esauriti -->
                @if (articoliEsauriti.Any())
                {
                    <div class="card mb-4">
                        <div class="card-header bg-danger text-white">
                            <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Articoli Esauriti</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Codice Articolo</th>
                                            <th>Esistenza</th>
                                            <th>Ordinato</th>
                                            <th>Impegnato</th>
                                            <th>Azioni</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var articolo in articoliEsauriti)
                                        {
                                            <tr>
                                                <td>
                                                    <i class="bi bi-box me-1 text-danger"></i>
                                                    <strong>@articolo.CodiceArticolo</strong>
                                                </td>
                                                <td>
                                                    <span class="text-danger fw-bold">@articolo.Esistenza.ToString("N2")</span>
                                                </td>
                                                <td>
                                                    @if (articolo.Ordinato > 0)
                                                    {
                                                        <span class="text-success">@articolo.Ordinato.ToString("N2")</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (articolo.Impegnato > 0)
                                                    {
                                                        <span class="text-warning">@articolo.Impegnato.ToString("N2")</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    <a asp-controller="ProgressiviArticoli" asp-action="Details" asp-route-id="@articolo.Id" 
                                                       class="btn btn-sm btn-outline-danger" title="Dettagli Articolo">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }

                <!-- Altri Magazzini -->
                @if (altriMagazzini.Any())
                {
                    <div class="card mb-4">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0"><i class="bi bi-building me-2"></i>Altri Magazzini Configurati</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @foreach (var magazzino in altriMagazzini.Take(12))
                                {
                                    <div class="col-md-4 mb-3">
                                        <div class="card h-100">
                                            <div class="card-body p-3">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <span class="@magazzino.BadgeCssClass">@magazzino.BadgeText</span>
                                                        <div class="mt-1">
                                                            @if (magazzino.HasDescrizione)
                                                            {
                                                                <small class="fw-bold">@magazzino.DescrizioneBreve</small>
                                                            }
                                                            else
                                                            {
                                                                <small class="text-muted fst-italic">Senza descrizione</small>
                                                            }
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <a asp-action="Details" asp-route-id="@magazzino.Id" 
                                                           class="btn btn-sm btn-outline-secondary" title="Visualizza">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            @if (altriMagazzini.Count > 12)
                            {
                                <div class="text-center mt-3">
                                    <small class="text-muted">
                                        Visualizzati 12 di @altriMagazzini.Count magazzini
                                    </small>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Informazioni Aggiuntive -->
            <div class="col-lg-4">
                <!-- Riepilogo -->
                <div class="card mb-4">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>Riepilogo</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Codice Magazzino</label>
                            <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                <span class="@Model.BadgeCssClass fs-4">@Model.BadgeText</span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Stato Configurazione</label>
                            <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                @if (Model.HasDescrizione)
                                {
                                    <span class="badge bg-success fs-6">Completo</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark fs-6">Incompleto</span>
                                }
                            </div>
                        </div>

                        @if (statisticheProgressivi != null)
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Articoli Gestiti</label>
                                <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                    <h4 class="text-primary mb-0">@statisticheProgressivi.TotaleArticoli</h4>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Informazioni Tecniche -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Informazioni Tecniche</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Descrizione Completa</label>
                            <div class="form-control-plaintext bg-light p-2 rounded">
                                <small class="font-monospace">@Model.DescrizioneCompleta</small>
                                <button type="button" class="btn btn-sm btn-outline-secondary ms-2" 
                                        onclick="copyToClipboard('@Model.DescrizioneCompleta')" title="Copia Descrizione">
                                    <i class="bi bi-clipboard"></i>
                                </button>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Info Export</label>
                            <div class="form-control-plaintext bg-light p-2 rounded">
                                <small class="font-monospace">@Model.InfoExport</small>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted">ID Sistema:</span>
                            <span class="badge bg-dark">#@Model.Id</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted">Codice:</span>
                            <strong class="text-primary">@Model.CodiceMagazzino</strong>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted">Descrizione:</span>
                            @if (Model.HasDescrizione)
                            {
                                <span class="badge bg-success">Presente</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Assente</span>
                            }
                        </div>
                    </div>
                </div>

                <!-- Azioni Rapide -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Azioni Rapide</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-outline-primary" 
                                    onclick="copyToClipboard('@Model.CodiceMagazzino')">
                                <i class="bi bi-clipboard me-2"></i>Copia Codice Magazzino
                            </button>
                            <button type="button" class="btn btn-outline-info" 
                                    onclick="copyToClipboard('@Model.NomeCompleto')">
                                <i class="bi bi-clipboard me-2"></i>Copia Nome Completo
                            </button>
                            @if (Model.HasDescrizione)
                            {
                                <button type="button" class="btn btn-outline-success" 
                                        onclick="copyToClipboard('@Model.DescrizioneMagazzino')">
                                    <i class="bi bi-clipboard me-2"></i>Copia Descrizione
                                </button>
                            }
                            <button type="button" class="btn btn-outline-secondary" 
                                    onclick="copyToClipboard('@Model.InfoExport')">
                                <i class="bi bi-clipboard me-2"></i>Copia Info Export
                            </button>
                            @if (statisticheProgressivi?.TotaleArticoli > 0)
                            {
                                <a asp-controller="ProgressiviArticoli" asp-action="Index" asp-route-codiceMagazzino="@Model.CodiceMagazzino" 
                                   class="btn btn-outline-warning">
                                    <i class="bi bi-boxes me-2"></i>Visualizza Articoli
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Copia negli appunti
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                showToast('Testo copiato negli appunti: ' + text, 'success');
            }).catch(function(err) {
                console.error('Errore nella copia: ', err);
                showToast('Errore nella copia del testo', 'error');
            });
        }

        // Funzione per mostrare toast
        function showToast(message, type) {
            const toastContainer = document.getElementById('toast-container') || createToastContainer();
            const toast = document.createElement('div');
            toast.className = `toast align-items-center text-white bg-${type === 'success' ? 'success' : 'danger'} border-0`;
            toast.setAttribute('role', 'alert');
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">${message}</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            `;
            toastContainer.appendChild(toast);
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
            
            toast.addEventListener('hidden.bs.toast', function() {
                toast.remove();
            });
        }

        // Crea il container per i toast se non esiste
        function createToastContainer() {
            const container = document.createElement('div');
            container.id = 'toast-container';
            container.className = 'toast-container position-fixed bottom-0 end-0 p-3';
            container.style.zIndex = '1055';
            document.body.appendChild(container);
            return container;
        }
    </script>
}
