@model AiDbMaster.Models.Operatore

@{
    ViewData["Title"] = "Dettagli Operatore";
}

<div class="container">
    <div class="content-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-eye me-2"></i>Dettagli Operatore</h2>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.IdOperatore" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Modifica
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Torna all'elenco
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <!-- Card principale con i dati -->
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-person-badge"></i> Informazioni Operatore
                            <span class="badge bg-light text-dark ms-2">ID: @Model?.IdOperatore</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label text-muted">Codice Operatore</label>
                                <div class="form-control-plaintext">
                                    <span class="badge bg-primary fs-6">@Model?.CodiceOperatore</span>
                                </div>
                            </div>
                            
                            <div class="col-md-8 mb-3">
                                <label class="form-label text-muted">Nome Completo</label>
                                <div class="form-control-plaintext">
                                    <strong class="fs-4">@Model?.NomeCompleto</strong>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted">Email</label>
                                <div class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(Model?.Email))
                                    {
                                        <a href="mailto:@Model.Email" class="text-decoration-none">
                                            <i class="bi bi-envelope text-primary"></i> @Model.Email
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Non specificata</span>
                                    }
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted">Telefono</label>
                                <div class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(Model?.Telefono))
                                    {
                                        <a href="tel:@Model.Telefono" class="text-decoration-none">
                                            <i class="bi bi-telephone text-success"></i> @Model.Telefono
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Non specificato</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label text-muted">Livello Competenza</label>
                                <div class="form-control-plaintext">
                                    @if (Model?.LivelloCompetenza.HasValue == true)
                                    {
                                        var badgeClass = Model.LivelloCompetenza switch
                                        {
                                            1 => "bg-danger",
                                            2 => "bg-warning text-dark",
                                            3 => "bg-info",
                                            4 => "bg-primary",
                                            5 => "bg-success",
                                            _ => "bg-secondary"
                                        };
                                        var livelloText = Model.LivelloCompetenza switch
                                        {
                                            1 => "Principiante",
                                            2 => "Base",
                                            3 => "Intermedio",
                                            4 => "Avanzato",
                                            5 => "Esperto",
                                            _ => "Non definito"
                                        };
                                        <span class="badge @badgeClass fs-6">
                                            <i class="bi bi-star-fill"></i> @Model.LivelloCompetenza - @livelloText
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Non definito</span>
                                    }
                                </div>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label text-muted">Data Assunzione</label>
                                <div class="form-control-plaintext">
                                    @if (Model?.DataAssunzione.HasValue == true)
                                    {
                                        var anni = DateTime.Now.Year - Model.DataAssunzione.Value.Year;
                                        <div>
                                            <i class="bi bi-calendar-event text-primary"></i>
                                            @Model.DataAssunzione.Value.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("it-IT"))
                                        </div>
                                        @if (anni > 0)
                                        {
                                            <small class="text-success">
                                                <i class="bi bi-clock-history"></i> @anni anni di servizio
                                            </small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Non specificata</span>
                                    }
                                </div>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label text-muted">Stato</label>
                                <div class="form-control-plaintext">
                                    @if (Model?.Attivo == true)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="bi bi-check-circle"></i> Attivo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary fs-6">
                                            <i class="bi bi-pause-circle"></i> Inattivo
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model?.Note))
                        {
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <label class="form-label text-muted">Note</label>
                                    <div class="form-control-plaintext">
                                        <div class="alert alert-light">
                                            <i class="bi bi-sticky"></i> @Model.Note
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Card azioni rapide -->
                <div class="card mt-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-lightning"></i> Azioni Rapide</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2 d-md-flex">
                            <a asp-action="Edit" asp-route-id="@Model?.IdOperatore" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Modifica Operatore
                            </a>
                            <a asp-action="Create" class="btn btn-success">
                                <i class="bi bi-person-plus"></i> Nuovo Operatore
                            </a>
                            @if (!string.IsNullOrEmpty(Model?.Email))
                            {
                                <a href="mailto:@Model.Email" class="btn btn-outline-primary">
                                    <i class="bi bi-envelope"></i> Invia Email
                                </a>
                            }
                            @if (!string.IsNullOrEmpty(Model?.Telefono))
                            {
                                <a href="tel:@Model.Telefono" class="btn btn-outline-success">
                                    <i class="bi bi-telephone"></i> Chiama
                                </a>
                            }
                            <a asp-action="Delete" asp-route-id="@Model?.IdOperatore" class="btn btn-outline-danger">
                                <i class="bi bi-trash"></i> Elimina
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <!-- Card statistiche -->
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        <h6 class="mb-0"><i class="bi bi-graph-up"></i> Statistiche</h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted">ID Univoco</small>
                            <div class="fw-bold">#@Model?.IdOperatore</div>
                        </div>
                        
                        <div class="mb-3">
                            <small class="text-muted">Lunghezza Nome</small>
                            <div class="fw-bold">@(Model?.NomeCompleto?.Length ?? 0) caratteri</div>
                        </div>

                        @if (Model?.DataAssunzione.HasValue == true)
                        {
                            var anni = DateTime.Now.Year - Model.DataAssunzione.Value.Year;
                            var mesi = ((DateTime.Now.Year - Model.DataAssunzione.Value.Year) * 12) + DateTime.Now.Month - Model.DataAssunzione.Value.Month;
                            
                            <div class="mb-3">
                                <small class="text-muted">Anni di Servizio</small>
                                <div class="fw-bold text-success">@anni anni</div>
                            </div>
                            
                            <div class="mb-3">
                                <small class="text-muted">Mesi di Servizio</small>
                                <div class="fw-bold text-info">@mesi mesi</div>
                            </div>
                        }

                        @if (Model?.OrdiniProduzione?.Any() == true)
                        {
                            <div class="mb-3">
                                <small class="text-muted">Ordini Assegnati</small>
                                <div class="fw-bold text-primary">@Model.OrdiniProduzione.Count</div>
                            </div>
                            
                            <div class="mb-3">
                                <small class="text-muted">Ordini in Produzione</small>
                                <div class="fw-bold text-warning">@Model.OrdiniProduzione.Count(o => o.IdStato == 2)</div>
                            </div>
                            
                            <div class="mb-3">
                                <small class="text-muted">Ordini Completati</small>
                                <div class="fw-bold text-success">@Model.OrdiniProduzione.Count(o => o.IdStato == 3)</div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Card navigazione -->
                <div class="card mt-4">
                    <div class="card-header bg-primary text-white">
                        <h6 class="mb-0"><i class="bi bi-compass"></i> Navigazione</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-action="Index" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-people"></i> Tutti gli Operatori
                            </a>
                            <a asp-action="Index" asp-route-attivo="true" class="btn btn-outline-success btn-sm">
                                <i class="bi bi-check-circle"></i> Solo Attivi
                            </a>
                            @if (Model?.LivelloCompetenza.HasValue == true)
                            {
                                <a asp-action="Index" asp-route-livelloCompetenza="@Model.LivelloCompetenza" class="btn btn-outline-info btn-sm">
                                    <i class="bi bi-star"></i> Stesso Livello
                                </a>
                            }
                            <a asp-action="Index" asp-route-hasEmail="true" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-envelope"></i> Con Email
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Card competenze -->
                @if (Model?.LivelloCompetenza.HasValue == true)
                {
                    <div class="card mt-4">
                        <div class="card-header bg-success text-white">
                            <h6 class="mb-0"><i class="bi bi-award"></i> Competenze</h6>
                        </div>
                        <div class="card-body">
                            <div class="progress mb-2">
                                <div class="progress-bar" role="progressbar" style="width: @((Model.LivelloCompetenza.Value * 20))%" 
                                     aria-valuenow="@Model.LivelloCompetenza.Value" aria-valuemin="0" aria-valuemax="5">
                                    @Model.LivelloCompetenza.Value/5
                                </div>
                            </div>
                            <small class="text-muted">
                                Livello @Model.LivelloCompetenza.Value su 5 - 
                                @(Model.LivelloCompetenza switch
                                {
                                    1 => "Principiante",
                                    2 => "Base", 
                                    3 => "Intermedio",
                                    4 => "Avanzato",
                                    5 => "Esperto",
                                    _ => "Non definito"
                                })
                            </small>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
