@model IEnumerable<AiDbMaster.Models.OrdiniTestate>

@{
    ViewData["Title"] = "Gestione Ordini";
    var search = ViewBag.CurrentSearch as string ?? "";
    var tipoOrdine = ViewBag.CurrentTipoOrdine as string ?? "R"; // Default: Ordini Cliente
    var annoOrdine = ViewBag.CurrentAnnoOrdine as short?;
    var codiceCliente = ViewBag.CurrentCodiceCliente as int?;
    var codiceAgente = ViewBag.CurrentCodiceAgente as short?;
    var statoOrdine = ViewBag.CurrentStatoOrdine as string ?? "";
    var dataInizio = ViewBag.CurrentDataInizio as DateTime?;
    var dataFine = ViewBag.CurrentDataFine as DateTime?;
    var sortOrder = ViewBag.CurrentSort as string ?? "data_desc";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var totalCount = ViewBag.TotalCount as int? ?? 0;
    var pageSize = ViewBag.PageSize as int? ?? 20;
    var anniOrdine = ViewBag.AnniOrdine as List<short> ?? new List<short>();
    var clienti = ViewBag.Clienti as List<dynamic> ?? new List<dynamic>();
    var agenti = ViewBag.Agenti as List<dynamic> ?? new List<dynamic>();
    var statistiche = ViewBag.Statistiche;
}

<div class="px-3">


    <div class="content-container">
        <!-- Header con Switch Tipo Ordine -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-clipboard-check me-2 text-primary"></i>Gestione Ordini</h2>
            <div class="d-flex gap-2 align-items-center">
                <!-- Switch Tipo Ordine -->
                <div class="btn-group" role="group" aria-label="Tipo Ordine">
                    <input type="radio" class="btn-check" name="tipoOrdineSwitch" id="ordiniClienti" value="R" @(tipoOrdine == "R" ? "checked" : "") autocomplete="off">
                    <label class="btn btn-outline-success" for="ordiniClienti">
                        <i class="bi bi-person-check me-1"></i>Ordini Clienti
                    </label>
                    
                    <input type="radio" class="btn-check" name="tipoOrdineSwitch" id="ordiniFornitori" value="O" @(tipoOrdine == "O" ? "checked" : "") autocomplete="off">
                    <label class="btn btn-outline-warning" for="ordiniFornitori">
                        <i class="bi bi-truck me-1"></i>Ordini Fornitori
                    </label>
                </div>
                
                <button type="button" class="btn btn-outline-secondary" onclick="resetFilters()">
                    <i class="bi bi-arrow-clockwise"></i> Reset
                </button>
            </div>
        </div>

        <!-- Statistiche Rapide -->
        @if (statistiche != null)
        {
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Totale Ordini</h6>
                                    <h3 class="mb-0">@totalCount</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="bi bi-clipboard-check" style="font-size: 2rem;"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-danger text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Ordini Scaduti</h6>
                                    <h3 class="mb-0">@(statistiche.OrdiniScaduti ?? 0)</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="bi bi-exclamation-triangle-fill" style="font-size: 2rem;"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-dark">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">In Scadenza Oggi</h6>
                                    <h3 class="mb-0">@(statistiche.OrdiniInScadenza ?? 0)</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="bi bi-clock-fill" style="font-size: 2rem;"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Totale Colli</h6>
                                    <h3 class="mb-0">@(statistiche.ColliTotali ?? 0)</h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="bi bi-boxes" style="font-size: 2rem;"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Filtri -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filtri di Ricerca</h5>
            </div>
            <div class="card-body">
                <form method="get" asp-action="Index" id="filterForm">
                    <input type="hidden" name="tipoOrdine" id="hiddenTipoOrdine" value="@tipoOrdine">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label for="search" class="form-label">Ricerca Generale</label>
                            <input type="text" class="form-control" id="search" name="search" value="@search" 
                                   placeholder="Numero, cliente, riferimento...">
                        </div>
                        <div class="col-md-2">
                            <label for="annoOrdine" class="form-label">Anno</label>
                            <select class="form-select" id="annoOrdine" name="annoOrdine">
                                <option value="">Tutti gli anni</option>
                                @foreach (var anno in anniOrdine)
                                {
                                    <option value="@anno" selected="@(annoOrdine == anno)">@anno</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="codiceCliente" class="form-label">Cliente</label>
                            <select class="form-select" id="codiceCliente" name="codiceCliente">
                                <option value="">Tutti i clienti</option>
                                @foreach (var cliente in clienti)
                                {
                                    <option value="@cliente.CodiceCliente" selected="@(codiceCliente == cliente.CodiceCliente)">
                                        @cliente.CodiceCliente - @cliente.RagioneSociale
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="codiceAgente" class="form-label">Agente</label>
                            <select class="form-select" id="codiceAgente" name="codiceAgente">
                                <option value="">Tutti gli agenti</option>
                                @foreach (var agente in agenti)
                                {
                                    <option value="@agente.CodiceAgente" selected="@(codiceAgente == agente.CodiceAgente)">
                                        @agente.CodiceAgente - @agente.DescrizioneAgente
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="statoOrdine" class="form-label">Stato</label>
                            <select class="form-select" id="statoOrdine" name="statoOrdine">
                                <option value="">Tutti gli stati</option>
                                <option value="Scaduto" selected="@(statoOrdine == "Scaduto")">Scaduto</option>
                                <option value="In Scadenza" selected="@(statoOrdine == "In Scadenza")">In Scadenza</option>
                                <option value="Prossima Consegna" selected="@(statoOrdine == "Prossima Consegna")">Prossima Consegna</option>
                                <option value="Programmato" selected="@(statoOrdine == "Programmato")">Programmato</option>
                                <option value="Senza Consegna" selected="@(statoOrdine == "Senza Consegna")">Senza Consegna</option>
                            </select>
                        </div>
                    </div>
                    <div class="row g-3 mt-2">
                        <div class="col-md-3">
                            <label for="dataInizio" class="form-label">Data Ordine Da</label>
                            <input type="date" class="form-control" id="dataInizio" name="dataInizio" 
                                   value="@(dataInizio?.ToString("yyyy-MM-dd"))">
                        </div>
                        <div class="col-md-3">
                            <label for="dataFine" class="form-label">Data Ordine A</label>
                            <input type="date" class="form-control" id="dataFine" name="dataFine" 
                                   value="@(dataFine?.ToString("yyyy-MM-dd"))">
                        </div>
                        <div class="col-md-2">
                            <label for="pageSize" class="form-label">Elementi per pagina</label>
                            <select class="form-select" id="pageSize" name="pageSize">
                                <option value="10" selected="@(pageSize == 10)">10</option>
                                <option value="20" selected="@(pageSize == 20)">20</option>
                                <option value="50" selected="@(pageSize == 50)">50</option>
                                <option value="100" selected="@(pageSize == 100)">100</option>
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search"></i> Cerca
                            </button>
                        </div>
                    </div>
                    <input type="hidden" name="sortOrder" value="@sortOrder">
                    <input type="hidden" name="page" value="1">
                </form>
            </div>
        </div>

        <!-- Lista Ordini con Righe Espandibili -->
        <div class="card">
            <div class="card-header bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        @if (tipoOrdine == "R")
                        {
                            <text><i class="bi bi-person-check me-2 text-success"></i>Ordini Clienti</text>
                        }
                        else
                        {
                            <text><i class="bi bi-truck me-2 text-warning"></i>Ordini Fornitori</text>
                        }
                    </h5>
                    <small class="text-muted">
                        Visualizzati @(Model?.Count() ?? 0) di @totalCount ordini
                    </small>
                </div>
            </div>
            <div class="card-body p-0">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="ordiniTable">
                            <thead class="table-dark sticky-top">
                                <tr>
                                    <th width="50">
                                        <i class="bi bi-chevron-down text-white" title="Espandi/Comprimi"></i>
                                    </th>
                                    <th>
                                        <a asp-action="Index" 
                                           asp-route-search="@search"
                                           asp-route-tipoOrdine="@tipoOrdine"
                                           asp-route-annoOrdine="@annoOrdine"
                                           asp-route-codiceCliente="@codiceCliente"
                                           asp-route-codiceAgente="@codiceAgente"
                                           asp-route-statoOrdine="@statoOrdine"
                                           asp-route-dataInizio="@dataInizio"
                                           asp-route-dataFine="@dataFine"
                                           asp-route-pageSize="@pageSize"
                                           asp-route-sortOrder="@(sortOrder == "numero" ? "numero_desc" : "numero")"
                                           class="text-white text-decoration-none">
                                            Numero Ordine
                                            @if (sortOrder == "numero")
                                            {
                                                <i class="bi bi-arrow-up"></i>
                                            }
                                            else if (sortOrder == "numero_desc")
                                            {
                                                <i class="bi bi-arrow-down"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>Cliente</th>
                                    <th class="col-data">
                                        <a asp-action="Index" 
                                           asp-route-search="@search"
                                           asp-route-tipoOrdine="@tipoOrdine"
                                           asp-route-annoOrdine="@annoOrdine"
                                           asp-route-codiceCliente="@codiceCliente"
                                           asp-route-codiceAgente="@codiceAgente"
                                           asp-route-statoOrdine="@statoOrdine"
                                           asp-route-dataInizio="@dataInizio"
                                           asp-route-dataFine="@dataFine"
                                           asp-route-pageSize="@pageSize"
                                           asp-route-sortOrder="@(sortOrder == "data" ? "data_desc" : "data")"
                                           class="text-white text-decoration-none">
                                            Data Ordine
                                            @if (sortOrder == "data")
                                            {
                                                <i class="bi bi-arrow-up"></i>
                                            }
                                            else if (sortOrder == "data_desc")
                                            {
                                                <i class="bi bi-arrow-down"></i>
                                            }
                                        </a>
                                    </th>
                                    <th class="col-data">
                                        <a asp-action="Index" 
                                           asp-route-search="@search"
                                           asp-route-tipoOrdine="@tipoOrdine"
                                           asp-route-annoOrdine="@annoOrdine"
                                           asp-route-codiceCliente="@codiceCliente"
                                           asp-route-codiceAgente="@codiceAgente"
                                           asp-route-statoOrdine="@statoOrdine"
                                           asp-route-dataInizio="@dataInizio"
                                           asp-route-dataFine="@dataFine"
                                           asp-route-pageSize="@pageSize"
                                           asp-route-sortOrder="@(sortOrder == "consegna" ? "consegna_desc" : "consegna")"
                                           class="text-white text-decoration-none">
                                            Data Consegna
                                            @if (sortOrder == "consegna")
                                            {
                                                <i class="bi bi-arrow-up"></i>
                                            }
                                            else if (sortOrder == "consegna_desc")
                                            {
                                                <i class="bi bi-arrow-down"></i>
                                            }
                                        </a>
                                    </th>
                                    <th class="col-agente">Agente</th>
                                    <th class="col-magazzino">Magazzino</th>
                                    <th class="col-colli">Colli</th>
                                    <th>Note</th>
                                    <th class="col-stato">Stato</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ordine in Model)
                                {
                                    <tr class="ordine-row" data-ordine-id="@ordine.Id">
                                        <td>
                                            <button type="button" class="btn btn-sm btn-outline-primary toggle-righe" 
                                                    data-ordine-id="@ordine.Id" title="Mostra/Nascondi Righe">
                                                <i class="bi bi-chevron-right"></i>
                                            </button>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span class="@ordine.TipoOrdineCssClass me-2">
                                                    <i class="@ordine.TipoOrdineIcon me-1"></i>
                                                    @ordine.DescrizioneTipoOrdine
                                                </span>
                                                <div>
                                                    <strong>@ordine.NumeroOrdineCompleto</strong>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div>
                                                <strong>@ordine.CodiceCliente</strong>
                                                @if (ordine.Cliente != null)
                                                {
                                                    <br><small class="text-muted">@ordine.Cliente.RagioneSociale</small>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-info text-white">@ordine.DataOrdine.ToString("dd/MM/yyyy")</span>
                                        </td>
                                        <td>
                                            @if (ordine.DataConsegna.HasValue)
                                            {
                                                <span class="badge bg-secondary">@ordine.DataConsegna.Value.ToString("dd/MM/yyyy")</span>
                                                @if (ordine.GiorniAllaConsegna.HasValue)
                                                {
                                                    <br><small class="text-muted">
                                                        @if (ordine.GiorniAllaConsegna.Value < 0)
                                                        {
                                                            <span class="text-danger">@Math.Abs(ordine.GiorniAllaConsegna.Value) gg fa</span>
                                                        }
                                                        else if (ordine.GiorniAllaConsegna.Value == 0)
                                                        {
                                                            <span class="text-warning">Oggi</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-success">tra @ordine.GiorniAllaConsegna.Value gg</span>
                                                        }
                                                    </small>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted">Non impostata</span>
                                            }
                                        </td>
                                        <td>
                                            @if (ordine.Agente != null)
                                            {
                                                <div>
                                                    <strong>@ordine.CodiceAgente</strong>
                                                    <br><small class="text-muted">@ordine.Agente.DescrizioneAgente</small>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">@ordine.CodiceAgente</span>
                                            }
                                        </td>
                                        <td>
                                            @if (ordine.Magazzino != null)
                                            {
                                                <div>
                                                    <strong>@ordine.CodiceMagazzino</strong>
                                                    @if (!string.IsNullOrEmpty(ordine.Magazzino.DescrizioneMagazzino))
                                                    {
                                                        <br><small class="text-muted">@ordine.Magazzino.DescrizioneMagazzino</small>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">@ordine.CodiceMagazzino</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">@ordine.TotaleColli</span>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(ordine.Note))
                                            {
                                                <span class="text-truncate d-inline-block" style="max-width: 150px;" title="@ordine.Note">
                                                    @ordine.Note
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="@ordine.StatoOrdineCssClass">@ordine.StatoOrdine</span>
                                        </td>
                                    </tr>
                                    <!-- Riga per le righe ordine (inizialmente nascosta) -->
                                    <tr class="righe-container" id="righe-@ordine.Id" style="display: none;">
                                        <td colspan="10" class="p-0">
                                            <div class="bg-light border-top">
                                                <div class="p-3">
                                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                                        <h6 class="mb-0">
                                                            <i class="bi bi-list-ul me-2"></i>Righe Ordine @ordine.NumeroOrdineCompleto
                                                        </h6>
                                                        <div class="spinner-border spinner-border-sm text-primary d-none" role="status" id="spinner-@ordine.Id">
                                                            <span class="visually-hidden">Caricamento...</span>
                                                        </div>
                                                    </div>
                                                    <div id="righe-content-@ordine.Id">
                                                        <!-- Le righe verranno caricate qui via AJAX -->
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Paginazione -->
                    @if (totalPages > 1)
                    {
                        <div class="card-footer">
                            <nav aria-label="Navigazione pagine">
                                <ul class="pagination justify-content-center mb-0">
                                    @if (currentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-tipoOrdine="@tipoOrdine"
                                               asp-route-annoOrdine="@annoOrdine"
                                               asp-route-codiceCliente="@codiceCliente"
                                               asp-route-codiceAgente="@codiceAgente"
                                               asp-route-statoOrdine="@statoOrdine"
                                               asp-route-dataInizio="@dataInizio"
                                               asp-route-dataFine="@dataFine"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="1">
                                                <i class="bi bi-chevron-double-left"></i>
                                            </a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-tipoOrdine="@tipoOrdine"
                                               asp-route-annoOrdine="@annoOrdine"
                                               asp-route-codiceCliente="@codiceCliente"
                                               asp-route-codiceAgente="@codiceAgente"
                                               asp-route-statoOrdine="@statoOrdine"
                                               asp-route-dataInizio="@dataInizio"
                                               asp-route-dataFine="@dataFine"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="@(currentPage - 1)">
                                                <i class="bi bi-chevron-left"></i>
                                            </a>
                                        </li>
                                    }

                                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == currentPage ? "active" : "")">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-tipoOrdine="@tipoOrdine"
                                               asp-route-annoOrdine="@annoOrdine"
                                               asp-route-codiceCliente="@codiceCliente"
                                               asp-route-codiceAgente="@codiceAgente"
                                               asp-route-statoOrdine="@statoOrdine"
                                               asp-route-dataInizio="@dataInizio"
                                               asp-route-dataFine="@dataFine"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="@i">@i</a>
                                        </li>
                                    }

                                    @if (currentPage < totalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-tipoOrdine="@tipoOrdine"
                                               asp-route-annoOrdine="@annoOrdine"
                                               asp-route-codiceCliente="@codiceCliente"
                                               asp-route-codiceAgente="@codiceAgente"
                                               asp-route-statoOrdine="@statoOrdine"
                                               asp-route-dataInizio="@dataInizio"
                                               asp-route-dataFine="@dataFine"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="@(currentPage + 1)">
                                                <i class="bi bi-chevron-right"></i>
                                            </a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-tipoOrdine="@tipoOrdine"
                                               asp-route-annoOrdine="@annoOrdine"
                                               asp-route-codiceCliente="@codiceCliente"
                                               asp-route-codiceAgente="@codiceAgente"
                                               asp-route-statoOrdine="@statoOrdine"
                                               asp-route-dataInizio="@dataInizio"
                                               asp-route-dataFine="@dataFine"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="@totalPages">
                                                <i class="bi bi-chevron-double-right"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    }
                }
                else
                {
                    <div class="p-5 text-center">
                        <i class="bi bi-inbox text-primary" style="font-size: 4rem;"></i>
                        <h4 class="mt-3">Nessun ordine trovato</h4>
                        <p class="text-muted">
                            @if (tipoOrdine == "R")
                            {
                                <span>Non ci sono ordini clienti che corrispondono ai criteri di ricerca.</span>
                            }
                            else
                            {
                                <span>Non ci sono ordini fornitori che corrispondono ai criteri di ricerca.</span>
                            }
                        </p>
                        <button type="button" class="btn btn-outline-primary mt-3" onclick="resetFilters()">
                            <i class="bi bi-arrow-clockwise"></i> Reset Filtri
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Gestione switch tipo ordine
        $(document).ready(function() {
            // Gestione cambio tipo ordine
            $('input[name="tipoOrdineSwitch"]').change(function() {
                const tipoOrdine = $(this).val();
                $('#hiddenTipoOrdine').val(tipoOrdine);
                $('#filterForm').submit();
            });

            // Auto-submit per filtri
            $('#annoOrdine, #codiceCliente, #codiceAgente, #statoOrdine, #pageSize, #dataInizio, #dataFine').change(function() {
                $('#filterForm').submit();
            });

            // Ricerca con debounce
            let searchTimeout;
            $('#search').on('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(function() {
                    $('#filterForm').submit();
                }, 500);
            });

            // Gestione toggle righe ordine
            $('.toggle-righe').click(function() {
                const ordineId = $(this).data('ordine-id');
                const righeContainer = $('#righe-' + ordineId);
                const icon = $(this).find('i');
                const spinner = $('#spinner-' + ordineId);
                const content = $('#righe-content-' + ordineId);

                if (righeContainer.is(':visible')) {
                    // Nascondi righe
                    righeContainer.slideUp();
                    icon.removeClass('bi-chevron-down').addClass('bi-chevron-right');
                } else {
                    // Mostra righe
                    righeContainer.slideDown();
                    icon.removeClass('bi-chevron-right').addClass('bi-chevron-down');

                    // Carica righe se non già caricate
                    if (content.is(':empty')) {
                        spinner.removeClass('d-none');
                        
                        $.ajax({
                            url: '@Url.Action("GetRigheOrdine", "OrdiniTestate")',
                            type: 'GET',
                            data: { ordineId: ordineId },
                            success: function(data) {
                                content.html(data);
                                spinner.addClass('d-none');
                            },
                            error: function(xhr, status, error) {
                                content.html('<div class="alert alert-danger">Errore nel caricamento delle righe ordine.</div>');
                                spinner.addClass('d-none');
                            }
                        });
                    } else {
                        // Se il contenuto è vuoto o contiene solo commenti HTML, forza il ricaricamento
                        var htmlContent = content.html().trim();
                        var isOnlyComments = htmlContent === '' || /^<!--[\s\S]*-->$/.test(htmlContent.replace(/\s+/g, ' '));
                        
                        if (isOnlyComments) {
                            content.empty(); // Svuota completamente
                            spinner.removeClass('d-none');
                            
                            $.ajax({
                                url: '@Url.Action("GetRigheOrdine", "OrdiniTestate")',
                                type: 'GET',
                                data: { ordineId: ordineId },
                                success: function(data) {
                                    content.html(data);
                                    spinner.addClass('d-none');
                                },
                                error: function(xhr, status, error) {
                                    content.html('<div class="alert alert-danger">Errore nel caricamento delle righe ordine.</div>');
                                    spinner.addClass('d-none');
                                }
                            });
                        }
                    }
                }
            });
        });

        // Reset filtri
        function resetFilters() {
            const tipoOrdine = $('input[name="tipoOrdineSwitch"]:checked').val();
            window.location.href = '@Url.Action("Index", "OrdiniTestate")?tipoOrdine=' + tipoOrdine;
        }

        // Evidenzia termini di ricerca
        @if (!string.IsNullOrEmpty(search))
        {
            <text>
            $(document).ready(function() {
                highlightSearchTerms('@Html.Raw(Html.Encode(search))');
            });
            </text>
        }

        function highlightSearchTerms(searchTerm) {
            if (!searchTerm) return;
            
            const regex = new RegExp(`(${searchTerm.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
            $('.ordine-row').each(function() {
                const $row = $(this);
                $row.find('td').each(function() {
                    const $cell = $(this);
                    const html = $cell.html();
                    const highlightedHtml = html.replace(regex, '<mark class="bg-warning">$1</mark>');
                    $cell.html(highlightedHtml);
                });
            });
        }
    </script>
}

