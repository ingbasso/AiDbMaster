@model AiDbMaster.ViewModels.DocumentEditViewModel

@{
    ViewData["Title"] = "Modifica Documento";
}

<div class="container">
    <h2>Modifica Documento</h2>
    <hr />
    
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="CategoryId" class="control-label"></label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                        <option value="">-- Seleziona una categoria --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Tags" class="control-label"></label>
                    <input asp-for="Tags" class="form-control" placeholder="Inserisci i tag separati da virgola" />
                    <span asp-validation-for="Tags" class="text-danger"></span>
                </div>
                
                <div class="form-check mb-3">
                    <input asp-for="IsConfidential" class="form-check-input" />
                    <label asp-for="IsConfidential" class="form-check-label"></label>
                    <span asp-validation-for="IsConfidential" class="text-danger"></span>
                </div>
                
                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Salva Modifiche
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Torna alla Lista
                    </a>
                </div>
            </form>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Informazioni</h5>
                </div>
                <div class="card-body">
                    <p>Modifica le informazioni del documento. Per sostituire il file, è necessario eliminare questo documento e caricarne uno nuovo.</p>
                    <p>Se imposti il documento come confidenziale, sarà accessibile solo agli utenti con permessi specifici.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 