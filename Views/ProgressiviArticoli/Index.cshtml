@model IEnumerable<AiDbMaster.Models.ProgressiviArticoli>

@{
    ViewData["Title"] = "Progressivi Articoli";
    ViewBag.UseFluidContainer = true;
    var search = ViewBag.CurrentSearch as string ?? "";
    var codiceArticolo = ViewBag.CurrentCodiceArticolo as string ?? "";
    var codiceMagazzino = ViewBag.CurrentCodiceMagazzino as short?;
    var statoGiacenza = ViewBag.CurrentStatoGiacenza as string ?? "";
    var soloConMovimenti = ViewBag.CurrentSoloConMovimenti as bool? ?? false;
    var sortOrder = ViewBag.CurrentSort as string ?? "articolo";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var totalCount = ViewBag.TotalCount as int? ?? 0;
    var pageSize = ViewBag.PageSize as int? ?? 50;
    var codiciArticolo = ViewBag.CodiciArticolo as List<string> ?? new List<string>();
    var codiciMagazzino = ViewBag.CodiciMagazzino as List<short> ?? new List<short>();
    var statiGiacenza = ViewBag.StatiGiacenza as List<string> ?? new List<string>();
    var statistiche = ViewBag.Statistiche;
}

<div class="container-fluid">


    <div class="content-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-boxes me-2 text-primary"></i>Progressivi Articoli</h2>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-secondary" onclick="resetFilters()">
                    <i class="bi bi-arrow-clockwise"></i> Reset Filtri
                </button>
                <button type="button" class="btn btn-success" onclick="exportToExcel()">
                    <i class="bi bi-file-earmark-excel"></i> Esporta Excel
                </button>
            </div>
        </div>

        <!-- Filtri -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filtri di Ricerca</h5>
            </div>
            <div class="card-body">
                <form method="get" asp-action="Index" id="filterForm">
                    <div class="row g-3">
                        <div class="col-md-2">
                            <label for="search" class="form-label">Ricerca Generale</label>
                            <input type="text" class="form-control" id="search" name="search" value="@search" 
                                   placeholder="Codice articolo, magazzino...">
                        </div>
                        <div class="col-md-2">
                            <label for="codiceArticolo" class="form-label">Articolo</label>
                            <select class="form-select" id="codiceArticolo" name="codiceArticolo">
                                <option value="">Tutti gli articoli</option>
                                @foreach (var codice in codiciArticolo.Take(50))
                                {
                                    <option value="@codice" selected="@(codiceArticolo == codice)">@codice</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="codiceMagazzino" class="form-label">Magazzino</label>
                            <select class="form-select" id="codiceMagazzino" name="codiceMagazzino">
                                <option value="">Tutti i magazzini</option>
                                @foreach (var codice in codiciMagazzino)
                                {
                                    <option value="@codice" selected="@(codiceMagazzino == codice)">@codice</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="statoGiacenza" class="form-label">Stato Giacenza</label>
                            <select class="form-select" id="statoGiacenza" name="statoGiacenza">
                                <option value="">Tutti gli stati</option>
                                @foreach (var stato in statiGiacenza)
                                {
                                    <option value="@stato" selected="@(statoGiacenza == stato)">@stato</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="pageSize" class="form-label">Elementi per pagina</label>
                            <select class="form-select" id="pageSize" name="pageSize">
                                <option value="25" selected="@(pageSize == 25)">25</option>
                                <option value="50" selected="@(pageSize == 50)">50</option>
                                <option value="100" selected="@(pageSize == 100)">100</option>
                                <option value="200" selected="@(pageSize == 200)">200</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search"></i> Cerca
                            </button>
                        </div>
                    </div>
                    <div class="row g-3 mt-2">
                        <div class="col-md-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="soloConMovimenti" name="soloConMovimenti" 
                                       value="true" @(soloConMovimenti ? "checked" : "")>
                                <label class="form-check-label" for="soloConMovimenti">
                                    Solo con movimenti (Ordinato/Impegnato/Prenotato > 0)
                                </label>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="sortOrder" value="@sortOrder">
                    <input type="hidden" name="page" value="1">
                </form>
            </div>
        </div>

        <!-- Statistiche -->
        <div class="row mb-4">
            <div class="col-md-2">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Totale Records</h6>
                                <h4 class="mb-0">@totalCount</h4>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-list-ol" style="font-size: 1.5rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Articoli</h6>
                                <h4 class="mb-0">@statistiche.TotaleArticoli</h4>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-box" style="font-size: 1.5rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Magazzini</h6>
                                <h4 class="mb-0">@statistiche.TotaleMagazzini</h4>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-building" style="font-size: 1.5rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Esistenza Tot.</h6>
                                <h4 class="mb-0">@statistiche.TotaleEsistenza.ToString("N0")</h4>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-boxes" style="font-size: 1.5rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card bg-secondary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Disponibile</h6>
                                <h4 class="mb-0">@statistiche.TotaleDisponibile.ToString("N0")</h4>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-check-circle" style="font-size: 1.5rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Impegnato</h6>
                                <h4 class="mb-0">@statistiche.TotaleImpegnato.ToString("N0")</h4>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-lock" style="font-size: 1.5rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabella Progressivi Articoli -->
        <div class="card">
            <div class="card-header bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Elenco Progressivi Articoli</h5>
                    <small class="text-muted">
                        Visualizzati @(Model?.Count() ?? 0) di @totalCount progressivi
                    </small>
                </div>
            </div>
            <div class="card-body p-0">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0" id="progressiviArticoliTable">
                            <thead class="table-dark sticky-top">
                                <tr>
                                    <th>
                                        <a asp-action="Index" 
                                           asp-route-search="@search"
                                           asp-route-codiceArticolo="@codiceArticolo"
                                           asp-route-codiceMagazzino="@codiceMagazzino"
                                           asp-route-statoGiacenza="@statoGiacenza"
                                           asp-route-soloConMovimenti="@soloConMovimenti"
                                           asp-route-pageSize="@pageSize"
                                           asp-route-sortOrder="@(sortOrder == "articolo" ? "articolo_desc" : "articolo")"
                                           class="text-white text-decoration-none">
                                            Articolo
                                            @if (sortOrder == "articolo")
                                            {
                                                <i class="bi bi-arrow-up"></i>
                                            }
                                            else if (sortOrder == "articolo_desc")
                                            {
                                                <i class="bi bi-arrow-down"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" 
                                           asp-route-search="@search"
                                           asp-route-codiceArticolo="@codiceArticolo"
                                           asp-route-codiceMagazzino="@codiceMagazzino"
                                           asp-route-statoGiacenza="@statoGiacenza"
                                           asp-route-soloConMovimenti="@soloConMovimenti"
                                           asp-route-pageSize="@pageSize"
                                           asp-route-sortOrder="@(sortOrder == "magazzino" ? "magazzino_desc" : "magazzino")"
                                           class="text-white text-decoration-none">
                                            Mag.
                                            @if (sortOrder == "magazzino")
                                            {
                                                <i class="bi bi-arrow-up"></i>
                                            }
                                            else if (sortOrder == "magazzino_desc")
                                            {
                                                <i class="bi bi-arrow-down"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" 
                                           asp-route-search="@search"
                                           asp-route-codiceArticolo="@codiceArticolo"
                                           asp-route-codiceMagazzino="@codiceMagazzino"
                                           asp-route-statoGiacenza="@statoGiacenza"
                                           asp-route-soloConMovimenti="@soloConMovimenti"
                                           asp-route-pageSize="@pageSize"
                                           asp-route-sortOrder="@(sortOrder == "esistenza" ? "esistenza_desc" : "esistenza")"
                                           class="text-white text-decoration-none">
                                            Esistenza
                                            @if (sortOrder == "esistenza")
                                            {
                                                <i class="bi bi-arrow-up"></i>
                                            }
                                            else if (sortOrder == "esistenza_desc")
                                            {
                                                <i class="bi bi-arrow-down"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" 
                                           asp-route-search="@search"
                                           asp-route-codiceArticolo="@codiceArticolo"
                                           asp-route-codiceMagazzino="@codiceMagazzino"
                                           asp-route-statoGiacenza="@statoGiacenza"
                                           asp-route-soloConMovimenti="@soloConMovimenti"
                                           asp-route-pageSize="@pageSize"
                                           asp-route-sortOrder="@(sortOrder == "disponibile" ? "disponibile_desc" : "disponibile")"
                                           class="text-white text-decoration-none">
                                            Disponibile
                                            @if (sortOrder == "disponibile")
                                            {
                                                <i class="bi bi-arrow-up"></i>
                                            }
                                            else if (sortOrder == "disponibile_desc")
                                            {
                                                <i class="bi bi-arrow-down"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" 
                                           asp-route-search="@search"
                                           asp-route-codiceArticolo="@codiceArticolo"
                                           asp-route-codiceMagazzino="@codiceMagazzino"
                                           asp-route-statoGiacenza="@statoGiacenza"
                                           asp-route-soloConMovimenti="@soloConMovimenti"
                                           asp-route-pageSize="@pageSize"
                                           asp-route-sortOrder="@(sortOrder == "ordinato" ? "ordinato_desc" : "ordinato")"
                                           class="text-white text-decoration-none">
                                            Ordinato
                                            @if (sortOrder == "ordinato")
                                            {
                                                <i class="bi bi-arrow-up"></i>
                                            }
                                            else if (sortOrder == "ordinato_desc")
                                            {
                                                <i class="bi bi-arrow-down"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" 
                                           asp-route-search="@search"
                                           asp-route-codiceArticolo="@codiceArticolo"
                                           asp-route-codiceMagazzino="@codiceMagazzino"
                                           asp-route-statoGiacenza="@statoGiacenza"
                                           asp-route-soloConMovimenti="@soloConMovimenti"
                                           asp-route-pageSize="@pageSize"
                                           asp-route-sortOrder="@(sortOrder == "impegnato" ? "impegnato_desc" : "impegnato")"
                                           class="text-white text-decoration-none">
                                            Impegnato
                                            @if (sortOrder == "impegnato")
                                            {
                                                <i class="bi bi-arrow-up"></i>
                                            }
                                            else if (sortOrder == "impegnato_desc")
                                            {
                                                <i class="bi bi-arrow-down"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>Prenotato</th>
                                    <th>Stato</th>
                                    <th>Azioni</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="progressivo-articolo-row">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-box me-2 text-primary"></i>
                                                <strong>@Html.DisplayFor(modelItem => item.CodiceArticolo)</strong>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-info text-white">@Html.DisplayFor(modelItem => item.CodiceMagazzino)</span>
                                        </td>
                                        <td>
                                            <strong class="text-primary">@item.Esistenza.ToString("N2")</strong>
                                        </td>
                                        <td>
                                            <strong class="@(item.Disponibile > 0 ? "text-success" : "text-danger")">
                                                @item.Disponibile.ToString("N2")
                                            </strong>
                                        </td>
                                        <td>
                                            @if (item.Ordinato > 0)
                                            {
                                                <span class="text-success">@item.Ordinato.ToString("N2")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Impegnato > 0)
                                            {
                                                <span class="text-warning">@item.Impegnato.ToString("N2")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Prenotato > 0)
                                            {
                                                <span class="text-info">@item.Prenotato.ToString("N2")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="@item.StatoGiacenzaCssClass">@item.StatoGiacenza</span>
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-action="Details" asp-route-id="@item.Id" 
                                                   class="btn btn-sm btn-outline-info" title="Visualizza Dettagli">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-secondary" 
                                                        onclick="copyToClipboard('@item.DescrizioneCompleta')" 
                                                        title="Copia Descrizione">
                                                    <i class="bi bi-clipboard"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Paginazione -->
                    @if (totalPages > 1)
                    {
                        <div class="card-footer">
                            <nav aria-label="Navigazione pagine">
                                <ul class="pagination justify-content-center mb-0">
                                    @if (currentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-codiceArticolo="@codiceArticolo"
                                               asp-route-codiceMagazzino="@codiceMagazzino"
                                               asp-route-statoGiacenza="@statoGiacenza"
                                               asp-route-soloConMovimenti="@soloConMovimenti"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="1">
                                                <i class="bi bi-chevron-double-left"></i>
                                            </a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-codiceArticolo="@codiceArticolo"
                                               asp-route-codiceMagazzino="@codiceMagazzino"
                                               asp-route-statoGiacenza="@statoGiacenza"
                                               asp-route-soloConMovimenti="@soloConMovimenti"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="@(currentPage - 1)">
                                                <i class="bi bi-chevron-left"></i>
                                            </a>
                                        </li>
                                    }

                                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == currentPage ? "active" : "")">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-codiceArticolo="@codiceArticolo"
                                               asp-route-codiceMagazzino="@codiceMagazzino"
                                               asp-route-statoGiacenza="@statoGiacenza"
                                               asp-route-soloConMovimenti="@soloConMovimenti"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="@i">@i</a>
                                        </li>
                                    }

                                    @if (currentPage < totalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-codiceArticolo="@codiceArticolo"
                                               asp-route-codiceMagazzino="@codiceMagazzino"
                                               asp-route-statoGiacenza="@statoGiacenza"
                                               asp-route-soloConMovimenti="@soloConMovimenti"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="@(currentPage + 1)">
                                                <i class="bi bi-chevron-right"></i>
                                            </a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-codiceArticolo="@codiceArticolo"
                                               asp-route-codiceMagazzino="@codiceMagazzino"
                                               asp-route-statoGiacenza="@statoGiacenza"
                                               asp-route-soloConMovimenti="@soloConMovimenti"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="@totalPages">
                                                <i class="bi bi-chevron-double-right"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    }
                }
                else
                {
                    <div class="p-5 text-center">
                        <i class="bi bi-inbox text-primary" style="font-size: 4rem;"></i>
                        <h4 class="mt-3">Nessun progressivo articolo trovato</h4>
                        @if (!string.IsNullOrEmpty(search) || !string.IsNullOrEmpty(codiceArticolo) || codiceMagazzino.HasValue || !string.IsNullOrEmpty(statoGiacenza) || soloConMovimenti)
                        {
                            <p class="text-muted">Prova a modificare i filtri di ricerca per visualizzare più risultati.</p>
                            <button type="button" class="btn btn-outline-primary mt-3" onclick="resetFilters()">
                                <i class="bi bi-arrow-clockwise"></i> Reset Filtri
                            </button>
                        }
                        else
                        {
                            <p class="text-muted">Non ci sono progressivi articoli configurati.</p>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Reset dei filtri
        function resetFilters() {
            window.location.href = '@Url.Action("Index", "ProgressiviArticoli")';
        }

        // Copia negli appunti
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                showToast('Descrizione copiata negli appunti: ' + text, 'success');
            }).catch(function(err) {
                console.error('Errore nella copia: ', err);
                showToast('Errore nella copia della descrizione', 'error');
            });
        }

        // Funzione per mostrare toast
        function showToast(message, type) {
            const toastContainer = document.getElementById('toast-container') || createToastContainer();
            const toast = document.createElement('div');
            toast.className = `toast align-items-center text-white bg-${type === 'success' ? 'success' : 'danger'} border-0`;
            toast.setAttribute('role', 'alert');
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">${message}</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            `;
            toastContainer.appendChild(toast);
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
            
            toast.addEventListener('hidden.bs.toast', function() {
                toast.remove();
            });
        }

        // Crea il container per i toast se non esiste
        function createToastContainer() {
            const container = document.createElement('div');
            container.id = 'toast-container';
            container.className = 'toast-container position-fixed bottom-0 end-0 p-3';
            container.style.zIndex = '1055';
            document.body.appendChild(container);
            return container;
        }

        // Esportazione Excel (placeholder)
        function exportToExcel() {
            showToast('Funzionalità di esportazione Excel da implementare', 'info');
        }

        // Auto-submit del form quando cambiano i filtri
        $(document).ready(function() {
            $('#codiceArticolo, #codiceMagazzino, #statoGiacenza, #pageSize, #soloConMovimenti').change(function() {
                $('#filterForm').submit();
            });

            // Ricerca in tempo reale con debounce
            let searchTimeout;
            $('#search').on('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(function() {
                    $('#filterForm').submit();
                }, 500);
            });

            // Evidenzia i termini di ricerca
            @if (!string.IsNullOrEmpty(search))
            {
                <text>
                highlightSearchTerms('@Html.Raw(Html.Encode(search))');
                </text>
            }
        });

        // Funzione per evidenziare i termini di ricerca
        function highlightSearchTerms(searchTerm) {
            if (!searchTerm) return;
            
            const regex = new RegExp(`(${searchTerm.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
            $('.progressivo-articolo-row').each(function() {
                const $row = $(this);
                $row.find('td').each(function() {
                    const $cell = $(this);
                    const html = $cell.html();
