@model AiDbMaster.Models.ProgressiviArticoli

@{
    ViewData["Title"] = "Dettagli Progressivo Articolo";
    var altriMagazzini = ViewBag.AltriMagazzini as List<AiDbMaster.Models.ProgressiviArticoli> ?? new List<AiDbMaster.Models.ProgressiviArticoli>();
    var altriArticoliMagazzino = ViewBag.AltriArticoliMagazzino as List<AiDbMaster.Models.ProgressiviArticoli> ?? new List<AiDbMaster.Models.ProgressiviArticoli>();
    var statisticheArticolo = ViewBag.StatisticheArticolo;
}

<div class="container">


    <div class="content-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-boxes me-2 text-primary"></i>Dettagli Progressivo Articolo</h2>
            <div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Torna all'elenco
                </a>
            </div>
        </div>

        <div class="row">
            <!-- Informazioni Principali -->
            <div class="col-lg-8">
                <!-- Identificazione Articolo -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-tag me-2"></i>Identificazione</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.CodiceArticolo)</label>
                                    <div class="form-control-plaintext bg-light p-3 rounded">
                                        <i class="bi bi-box me-2 text-primary"></i>
                                        <strong class="fs-5">@Html.DisplayFor(model => model.CodiceArticolo)</strong>
                                        <button type="button" class="btn btn-sm btn-outline-secondary ms-2" 
                                                onclick="copyToClipboard('@Model.CodiceArticolo')" title="Copia Codice">
                                            <i class="bi bi-clipboard"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.CodiceMagazzino)</label>
                                    <div class="form-control-plaintext bg-light p-3 rounded text-center">
                                        <span class="badge bg-info fs-4">@Html.DisplayFor(model => model.CodiceMagazzino)</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">ID Sistema</label>
                            <div class="form-control-plaintext bg-light p-2 rounded">
                                <span class="badge bg-dark">#@Html.DisplayFor(model => model.Id)</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Giacenze e Movimenti -->
                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="bi bi-boxes me-2"></i>Giacenze e Movimenti</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Esistenza)</label>
                                    <div class="form-control-plaintext bg-light p-3 rounded text-center">
                                        <h3 class="text-primary mb-0">@Model.Esistenza.ToString("N2")</h3>
                                        <small class="text-muted">Quantit√† in magazzino</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Disponibile</label>
                                    <div class="form-control-plaintext bg-light p-3 rounded text-center">
                                        <h3 class="@(Model.Disponibile > 0 ? "text-success" : "text-danger") mb-0">
                                            @Model.Disponibile.ToString("N2")
                                        </h3>
                                        <small class="text-muted">Esistenza - Impegnato - Prenotato</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Ordinato)</label>
                                    <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                        <h4 class="@(Model.Ordinato > 0 ? "text-success" : "text-muted") mb-0">
                                            @Model.Ordinato.ToString("N2")
                                        </h4>
                                        <small class="text-muted">In arrivo</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Impegnato)</label>
                                    <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                        <h4 class="@(Model.Impegnato > 0 ? "text-warning" : "text-muted") mb-0">
                                            @Model.Impegnato.ToString("N2")
                                        </h4>
                                        <small class="text-muted">Riservato</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Prenotato)</label>
                                    <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                        <h4 class="@(Model.Prenotato > 0 ? "text-info" : "text-muted") mb-0">
                                            @Model.Prenotato.ToString("N2")
                                        </h4>
                                        <small class="text-muted">Prenotato</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Totale Previsto:</strong> @Model.TotalePrevisto.ToString("N2") 
                            (Esistenza + Ordinato)
                        </div>
                    </div>
                </div>

                <!-- Altri Magazzini per lo stesso Articolo -->
                @if (altriMagazzini.Any())
                {
                    <div class="card mb-4">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0"><i class="bi bi-building me-2"></i>Altri Magazzini per @Model.CodiceArticolo</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Magazzino</th>
                                            <th>Esistenza</th>
                                            <th>Disponibile</th>
                                            <th>Ordinato</th>
                                            <th>Impegnato</th>
                                            <th>Stato</th>
                                            <th>Azioni</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var magazzino in altriMagazzini)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="badge bg-info">@magazzino.CodiceMagazzino</span>
                                                </td>
                                                <td>
                                                    <strong>@magazzino.Esistenza.ToString("N2")</strong>
                                                </td>
                                                <td>
                                                    <strong class="@(magazzino.Disponibile > 0 ? "text-success" : "text-danger")">
                                                        @magazzino.Disponibile.ToString("N2")
                                                    </strong>
                                                </td>
                                                <td>
                                                    @if (magazzino.Ordinato > 0)
                                                    {
                                                        <span class="text-success">@magazzino.Ordinato.ToString("N2")</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (magazzino.Impegnato > 0)
                                                    {
                                                        <span class="text-warning">@magazzino.Impegnato.ToString("N2")</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    <span class="@magazzino.StatoGiacenzaCssClass">@magazzino.StatoGiacenza</span>
                                                </td>
                                                <td>
                                                    <a asp-action="Details" asp-route-id="@magazzino.Id" 
                                                       class="btn btn-sm btn-outline-info" title="Visualizza Dettagli">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }

                <!-- Altri Articoli nello stesso Magazzino -->
                @if (altriArticoliMagazzino.Any())
                {
                    <div class="card mb-4">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0"><i class="bi bi-boxes me-2"></i>Altri Articoli nel Magazzino @Model.CodiceMagazzino</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Articolo</th>
                                            <th>Esistenza</th>
                                            <th>Disponibile</th>
                                            <th>Stato</th>
                                            <th>Azioni</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var articolo in altriArticoliMagazzino)
                                        {
                                            <tr>
                                                <td>
                                                    <i class="bi bi-box me-2 text-primary"></i>
                                                    <strong>@articolo.CodiceArticolo</strong>
                                                </td>
                                                <td>
                                                    <strong>@articolo.Esistenza.ToString("N2")</strong>
                                                </td>
                                                <td>
                                                    <strong class="@(articolo.Disponibile > 0 ? "text-success" : "text-danger")">
                                                        @articolo.Disponibile.ToString("N2")
                                                    </strong>
                                                </td>
                                                <td>
                                                    <span class="@articolo.StatoGiacenzaCssClass">@articolo.StatoGiacenza</span>
                                                </td>
                                                <td>
                                                    <a asp-action="Details" asp-route-id="@articolo.Id" 
                                                       class="btn btn-sm btn-outline-info" title="Visualizza Dettagli">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Informazioni Aggiuntive -->
            <div class="col-lg-4">
                <!-- Stato Giacenza -->
                <div class="card mb-4">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"><i class="bi bi-speedometer2 me-2"></i>Stato Giacenza</h5>
                    </div>
                    <div class="card-body text-center">
                        <div class="mb-3">
                            <span class="@Model.StatoGiacenzaCssClass fs-4">@Model.StatoGiacenza</span>
                        </div>
                        @if (Model.PercentualeImpegno > 0)
                        {
                            <div class="mb-3">
                                <label class="form-label fw-bold">Percentuale Impegno</label>
                                <div class="progress" style="height: 25px;">
                                    <div class="progress-bar @(Model.PercentualeImpegno > 80 ? "bg-danger" : Model.PercentualeImpegno > 50 ? "bg-warning" : "bg-success")" 
                                         role="progressbar" style="width: @Model.PercentualeImpegno%">
                                        @Model.PercentualeImpegno.ToString("N1")%
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Statistiche Articolo -->
                @if (statisticheArticolo != null)
                {
                    <div class="card mb-4">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Statistiche Articolo</h5>
                        </div>
                        <div class="card-body">
                            <div class="row text-center mb-3">
                                <div class="col-6">
                                    <div class="border-end">
                                        <h6 class="text-muted">Tot. Esistenza</h6>
                                        <h4 class="text-primary">@statisticheArticolo.TotaleEsistenza.ToString("N0")</h4>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <h6 class="text-muted">Tot. Disponibile</h6>
                                    <h4 class="text-success">@statisticheArticolo.TotaleDisponibile.ToString("N0")</h4>
                                </div>
                            </div>
                            
                            <div class="row text-center mb-3">
                                <div class="col-4">
                                    <h6 class="text-muted">Ordinato</h6>
                                    <h5 class="text-success">@statisticheArticolo.TotaleOrdinato.ToString("N0")</h5>
                                </div>
                                <div class="col-4">
                                    <h6 class="text-muted">Impegnato</h6>
                                    <h5 class="text-warning">@statisticheArticolo.TotaleImpegnato.ToString("N0")</h5>
                                </div>
                                <div class="col-4">
                                    <h6 class="text-muted">Prenotato</h6>
                                    <h5 class="text-info">@statisticheArticolo.TotalePrenotato.ToString("N0")</h5>
                                </div>
                            </div>

                            <hr>
                            
                            <div class="text-center">
                                <small class="text-muted">
                                    <i class="bi bi-building me-1"></i>
                                    Presente in <strong>@statisticheArticolo.NumeroMagazzini</strong> magazzini
                                </small>
                            </div>
                        </div>
                    </div>
                }

                <!-- Riepilogo -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-list-check me-2"></i>Riepilogo</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Descrizione Completa</label>
                            <div class="form-control-plaintext bg-light p-2 rounded">
                                <small class="font-monospace">@Model.DescrizioneCompleta</small>
                                <button type="button" class="btn btn-sm btn-outline-secondary ms-2" 
                                        onclick="copyToClipboard('@Model.DescrizioneCompleta')" title="Copia Descrizione">
                                    <i class="bi bi-clipboard"></i>
                                </button>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Riepilogo Quantit√†</label>
                            <div class="form-control-plaintext bg-light p-2 rounded">
                                <small class="font-monospace">@Model.RiepilogoQuantita</small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Movimenti Attivi</label>
                            <div class="form-control-plaintext bg-light p-2 rounded text-center">
                                @if (Model.HasMovimenti)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle me-1"></i>S√¨
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle me-1"></i>No
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Azioni Rapide -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Azioni Rapide</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="button" class="btn btn-outline-primary" 
                                    onclick="copyToClipboard('@Model.CodiceArticolo')">
                                <i class="bi bi-clipboard me-2"></i>Copia Codice Articolo
                            </button>
                            <button type="button" class="btn btn-outline-info" 
                                    onclick="copyToClipboard('@Model.CodiceMagazzino')">
                                <i class="bi bi-clipboard me-2"></i>Copia Codice Magazzino
                            </button>
                            <button type="button" class="btn btn-outline-success" 
                                    onclick="copyToClipboard('@Model.Disponibile.ToString("N2")')">
                                <i class="bi bi-clipboard me-2"></i>Copia Quantit√† Disponibile
                            </button>
                            <button type="button" class="btn btn-outline-secondary" 
                                    onclick="copyToClipboard('@Model.RiepilogoQuantita')">
                                <i class="bi bi-clipboard me-2"></i>Copia Riepilogo Completo
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Copia negli appunti
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                showToast('Testo copiato negli appunti: ' + text, 'success');
            }).catch(function(err) {
                console.error('Errore nella copia: ', err);
                showToast('Errore nella copia del testo', 'error');
            });
        }

        // Funzione per mostrare toast
        function showToast(message, type) {
            const toastContainer = document.getElementById('toast-container') || createToastContainer();
            const toast = document.createElement('div');
            toast.className = `toast align-items-center text-white bg-${type === 'success' ? 'success' : 'danger'} border-0`;
            toast.setAttribute('role', 'alert');
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">${message}</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            `;
            toastContainer.appendChild(toast);
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
            
            toast.addEventListener('hidden.bs.toast', function() {
                toast.remove();
            });
        }

        // Crea il container per i toast se non esiste
        function createToastContainer() {
            const container = document.createElement('div');
            container.id = 'toast-container';
            container.className = 'toast-container position-fixed bottom-0 end-0 p-3';
            container.style.zIndex = '1055';
            document.body.appendChild(container);
            return container;
        }
    </script>
}
