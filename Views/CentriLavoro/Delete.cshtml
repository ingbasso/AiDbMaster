@model AiDbMaster.ViewModels.DeleteCentroLavoroViewModel

@{
    ViewData["Title"] = "Elimina Centro di Lavoro";
}

<div class="container">
    <div class="content-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-danger"><i class="bi bi-trash me-2"></i>Elimina Centro di Lavoro</h2>
            <div>
                <a asp-action="Details" asp-route-id="@Model?.CentroLavoro?.IdCentroLavoro" class="btn btn-outline-info">
                    <i class="bi bi-eye"></i> Dettagli
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Torna all'elenco
                </a>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <!-- Alert di avvertimento -->
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">
                        <i class="bi bi-exclamation-triangle"></i> Attenzione!
                    </h4>
                    <p>Stai per eliminare definitivamente questo centro di lavoro dal sistema.</p>
                    <hr>
                    <p class="mb-0">
                        <strong>Questa operazione non può essere annullata.</strong>
                        @if (Model?.HasOrdiniProduzione == true)
                        {
                            <br><span class="text-danger">
                                <i class="bi bi-exclamation-circle"></i> 
                                <strong>ATTENZIONE:</strong> Questo centro ha @Model.OrdiniProduzioneCount ordini di produzione collegati!
                            </span>
                        }
                        else
                        {
                            <span>Considera di disattivare il centro invece di eliminarlo per mantenere lo storico.</span>
                        }
                    </p>
                </div>

                @if (Model?.HasOrdiniProduzione == true)
                {
                    <!-- Alert blocco eliminazione -->
                    <div class="alert alert-warning" role="alert">
                        <h5><i class="bi bi-shield-exclamation"></i> Eliminazione Bloccata</h5>
                        <p>
                            Non è possibile eliminare questo centro di lavoro perché ha 
                            <strong>@Model.OrdiniProduzioneCount ordini di produzione</strong> collegati.
                        </p>
                        <p class="mb-0">
                            Per eliminare il centro, è necessario prima:
                        </p>
                        <ul class="mt-2">
                            <li>Completare o cancellare tutti gli ordini di produzione assegnati</li>
                            <li>Oppure riassegnare gli ordini ad altri centri di lavoro</li>
                        </ul>
                    </div>
                }

                <!-- Card con i dati del centro -->
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-building-gear"></i> Centro di Lavoro da Eliminare
                            <span class="badge bg-light text-dark ms-2">ID: @Model?.CentroLavoro?.IdCentroLavoro</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label text-muted">Codice Centro</label>
                                <div class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(Model?.CentroLavoro?.CodiceCentro))
                                    {
                                        <span class="badge bg-primary fs-6">@Model.CentroLavoro.CodiceCentro</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Non specificato</span>
                                    }
                                </div>
                            </div>
                            
                            <div class="col-md-8 mb-3">
                                <label class="form-label text-muted">Descrizione Centro</label>
                                <div class="form-control-plaintext">
                                    <strong class="fs-5">@Model?.CentroLavoro?.DescrizioneCentro</strong>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label class="form-label text-muted">Capacità Oraria</label>
                                <div class="form-control-plaintext">
                                    @if (Model?.CentroLavoro?.CapacitaOraria.HasValue == true)
                                    {
                                        <span class="badge bg-success fs-6">@Model.CentroLavoro.CapacitaOraria pezzi/h</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Non definita</span>
                                    }
                                </div>
                            </div>
                            
                            <div class="col-md-3 mb-3">
                                <label class="form-label text-muted">Costo Orario</label>
                                <div class="form-control-plaintext">
                                    @if (Model?.CentroLavoro?.CostoOrarioStandard.HasValue == true)
                                    {
                                        <span class="badge bg-warning text-dark fs-6">€@Model.CentroLavoro.CostoOrarioStandard.Value.ToString("F2")/h</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Non definito</span>
                                    }
                                </div>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label class="form-label text-muted">Stato Attuale</label>
                                <div class="form-control-plaintext">
                                    @if (Model?.CentroLavoro?.Attivo == true)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="bi bi-check-circle"></i> Attivo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary fs-6">
                                            <i class="bi bi-pause-circle"></i> Inattivo
                                        </span>
                                    }
                                </div>
                            </div>
                            
                            <div class="col-md-3 mb-3">
                                <label class="form-label text-muted">Data Creazione</label>
                                <div class="form-control-plaintext">
                                    <i class="bi bi-calendar-plus text-muted"></i>
                                    @Model?.CentroLavoro?.DataCreazione.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model?.CentroLavoro?.Note))
                        {
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <label class="form-label text-muted">Note</label>
                                    <div class="form-control-plaintext">
                                        <div class="alert alert-light">
                                            <i class="bi bi-sticky"></i> @Model.CentroLavoro.Note
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                @if (Model?.HasOrdiniProduzione != true)
                {
                    <!-- Card alternative all'eliminazione -->
                    <div class="card mt-4 border-warning">
                        <div class="card-header bg-warning text-dark">
                            <h6 class="mb-0"><i class="bi bi-lightbulb"></i> Alternative Consigliate</h6>
                        </div>
                        <div class="card-body">
                            <p><strong>Prima di eliminare, considera queste alternative:</strong></p>
                            <ul>
                                <li>
                                    <strong>Disattivazione:</strong> 
                                    <a asp-action="Edit" asp-route-id="@Model?.CentroLavoro?.IdCentroLavoro" class="btn btn-sm btn-warning ms-2">
                                        <i class="bi bi-pause-circle"></i> Disattiva invece
                                    </a>
                                </li>
                                <li><strong>Modifica:</strong> Aggiorna la descrizione o i parametri se non sono più accurati</li>
                                <li><strong>Archiviazione:</strong> Mantieni per riferimenti storici e calcoli</li>
                            </ul>
                        </div>
                    </div>

                    <!-- Form di conferma eliminazione -->
                    <div class="card mt-4 border-danger">
                        <div class="card-header bg-danger text-white">
                            <h6 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Conferma Eliminazione</h6>
                        </div>
                        <div class="card-body">
                            <form asp-action="Delete" method="post">
                                <input type="hidden" asp-for="CentroLavoro.IdCentroLavoro" />
                                
                                <div class="form-check mb-3">
                                    <input class="form-check-input" type="checkbox" id="confirmDelete" required>
                                    <label class="form-check-label" for="confirmDelete">
                                        <strong>Confermo di voler eliminare definitivamente questo centro di lavoro</strong>
                                    </label>
                                </div>

                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <small class="text-muted">
                                            <i class="bi bi-info-circle"></i> 
                                            L'eliminazione è irreversibile
                                        </small>
                                    </div>
                                    <div>
                                        <button type="submit" class="btn btn-danger" id="deleteButton" disabled>
                                            <i class="bi bi-trash"></i> Elimina Definitivamente
                                        </button>
                                        <a asp-action="Edit" asp-route-id="@Model?.CentroLavoro?.IdCentroLavoro" class="btn btn-warning ms-2">
                                            <i class="bi bi-pause-circle"></i> Disattiva Invece
                                        </a>
                                        <a asp-action="Index" class="btn btn-secondary ms-2">
                                            <i class="bi bi-x-circle"></i> Annulla
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Azioni alternative quando non si può eliminare -->
                    <div class="card mt-4">
                        <div class="card-header bg-light">
                            <h6 class="mb-0"><i class="bi bi-tools"></i> Azioni Alternative</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2 d-md-flex justify-content-center">
                                <a asp-action="Edit" asp-route-id="@Model?.CentroLavoro?.IdCentroLavoro" class="btn btn-warning">
                                    <i class="bi bi-pause-circle"></i> Disattiva Centro
                                </a>
                                <a asp-controller="ListaOP" asp-action="Index" asp-route-idCentroLavoro="@Model?.CentroLavoro?.IdCentroLavoro" class="btn btn-info">
                                    <i class="bi bi-list-task"></i> Visualizza Ordini
                                </a>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> Torna all'Elenco
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@if (Model?.HasOrdiniProduzione != true)
{
    @section Scripts {
        <script>
            // Abilita il pulsante di eliminazione solo quando la checkbox è selezionata
            document.getElementById('confirmDelete').addEventListener('change', function() {
                const deleteButton = document.getElementById('deleteButton');
                deleteButton.disabled = !this.checked;
                
                if (this.checked) {
                    deleteButton.classList.remove('btn-danger');
                    deleteButton.classList.add('btn-outline-danger');
                } else {
                    deleteButton.classList.remove('btn-outline-danger');
                    deleteButton.classList.add('btn-danger');
                }
            });

            // Conferma aggiuntiva prima dell'eliminazione
            document.querySelector('form').addEventListener('submit', function(e) {
                const descrizione = '@Model?.CentroLavoro?.DescrizioneCentro';
                const confirmMessage = `Sei assolutamente sicuro di voler eliminare il centro di lavoro "${descrizione}"?\n\nQuesta operazione NON PUÒ essere annullata.`;
                
                if (!confirm(confirmMessage)) {
                    e.preventDefault();
                    return false;
                }
                
                // Seconda conferma per sicurezza
                const finalConfirm = 'Digita "ELIMINA" per confermare definitivamente:';
                const userInput = prompt(finalConfirm);
                
                if (userInput !== 'ELIMINA') {
                    e.preventDefault();
                    alert('Eliminazione annullata. Testo di conferma non corretto.');
                    return false;
                }
                
                return true;
            });

            // Focus sulla checkbox al caricamento
            document.addEventListener('DOMContentLoaded', function() {
                document.getElementById('confirmDelete').focus();
            });
        </script>
    }
}
