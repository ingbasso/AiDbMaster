@model AiDbMaster.Models.CentroLavoro

@{
    ViewData["Title"] = "Dettagli Centro di Lavoro";
}

<div class="container">
    <div class="content-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-eye me-2"></i>Dettagli Centro di Lavoro</h2>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.IdCentroLavoro" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Modifica
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Torna all'elenco
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <!-- Card principale con i dati -->
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-building-gear"></i> Informazioni Centro di Lavoro
                            <span class="badge bg-light text-dark ms-2">ID: @Model?.IdCentroLavoro</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label text-muted">Codice Centro</label>
                                <div class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(Model?.CodiceCentro))
                                    {
                                        <span class="badge bg-primary fs-6">@Model.CodiceCentro</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Non specificato</span>
                                    }
                                </div>
                            </div>
                            
                            <div class="col-md-8 mb-3">
                                <label class="form-label text-muted">Descrizione Centro</label>
                                <div class="form-control-plaintext">
                                    <strong class="fs-5">@Model?.DescrizioneCentro</strong>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label class="form-label text-muted">Capacità Oraria</label>
                                <div class="form-control-plaintext">
                                    @if (Model?.CapacitaOraria.HasValue == true)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="bi bi-speedometer2"></i> @Model.CapacitaOraria pezzi/h
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Non definita</span>
                                    }
                                </div>
                            </div>
                            
                            <div class="col-md-3 mb-3">
                                <label class="form-label text-muted">Costo Orario</label>
                                <div class="form-control-plaintext">
                                    @if (Model?.CostoOrarioStandard.HasValue == true)
                                    {
                                        <span class="badge bg-warning text-dark fs-6">
                                            <i class="bi bi-currency-euro"></i> @Model.CostoOrarioStandard.Value.ToString("F2")/h
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Non definito</span>
                                    }
                                </div>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label class="form-label text-muted">Stato</label>
                                <div class="form-control-plaintext">
                                    @if (Model?.Attivo == true)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="bi bi-check-circle"></i> Attivo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary fs-6">
                                            <i class="bi bi-pause-circle"></i> Inattivo
                                        </span>
                                    }
                                </div>
                            </div>

                            <div class="col-md-3 mb-3">
                                <label class="form-label text-muted">Ordini Assegnati</label>
                                <div class="form-control-plaintext">
                                    <span class="badge bg-info fs-6">
                                        <i class="bi bi-list-task"></i> @(Model?.OrdiniProduzione?.Count ?? 0)
                                    </span>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model?.Note))
                        {
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <label class="form-label text-muted">Note</label>
                                    <div class="form-control-plaintext">
                                        <div class="alert alert-light">
                                            <i class="bi bi-sticky"></i> @Model.Note
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <hr class="my-4">

                        <!-- Informazioni di sistema -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted">
                                    <i class="bi bi-calendar-plus"></i> Data Creazione
                                </label>
                                <div class="form-control-plaintext">
                                    @Model?.DataCreazione.ToString("dddd, dd MMMM yyyy 'alle' HH:mm:ss", new System.Globalization.CultureInfo("it-IT"))
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted">
                                    <i class="bi bi-calendar-check"></i> Ultima Modifica
                                </label>
                                <div class="form-control-plaintext">
                                    @if (Model?.DataUltimaModifica != null)
                                    {
                                        @Model.DataUltimaModifica?.ToString("dddd, dd MMMM yyyy 'alle' HH:mm:ss", new System.Globalization.CultureInfo("it-IT"))
                                    }
                                    else
                                    {
                                        <span class="text-muted">Mai modificato</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Calcoli automatici -->
                        @if (Model?.CapacitaOraria.HasValue == true && Model?.CostoOrarioStandard.HasValue == true)
                        {
                            <div class="row">
                                <div class="col-12">
                                    <div class="alert alert-info">
                                        <h6><i class="bi bi-calculator"></i> Calcoli Automatici</h6>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <strong>Costo Giornaliero (8h):</strong><br>
                                                €@((Model.CostoOrarioStandard * 8)?.ToString("F2"))
                                            </div>
                                            <div class="col-md-4">
                                                <strong>Capacità Giornaliera (8h):</strong><br>
                                                @(Model.CapacitaOraria * 8) pezzi
                                            </div>
                                            <div class="col-md-4">
                                                <strong>Costo per Pezzo:</strong><br>
                                                €@((Model.CostoOrarioStandard / Model.CapacitaOraria)?.ToString("F4"))
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Card azioni rapide -->
                <div class="card mt-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-lightning"></i> Azioni Rapide</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2 d-md-flex">
                            <a asp-action="Edit" asp-route-id="@Model?.IdCentroLavoro" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Modifica Centro
                            </a>
                            <a asp-action="Create" class="btn btn-success">
                                <i class="bi bi-plus-circle"></i> Nuovo Centro
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model?.IdCentroLavoro" class="btn btn-outline-danger">
                                <i class="bi bi-trash"></i> Elimina
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <!-- Card statistiche -->
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        <h6 class="mb-0"><i class="bi bi-graph-up"></i> Statistiche</h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted">ID Univoco</small>
                            <div class="fw-bold">#@Model?.IdCentroLavoro</div>
                        </div>
                        
                        <div class="mb-3">
                            <small class="text-muted">Lunghezza Descrizione</small>
                            <div class="fw-bold">@(Model?.DescrizioneCentro?.Length ?? 0) caratteri</div>
                        </div>

                        <div class="mb-3">
                            <small class="text-muted">Giorni dalla creazione</small>
                            <div class="fw-bold">@((DateTime.Now - Model?.DataCreazione)?.Days ?? 0) giorni</div>
                        </div>

                        @if (Model?.OrdiniProduzione?.Any() == true)
                        {
                            <div class="mb-3">
                                <small class="text-muted">Ordini in Produzione</small>
                                <div class="fw-bold text-warning">@Model.OrdiniProduzione.Count(o => o.IdStato == 2)</div>
                            </div>
                            
                            <div class="mb-3">
                                <small class="text-muted">Ordini Completati</small>
                                <div class="fw-bold text-success">@Model.OrdiniProduzione.Count(o => o.IdStato == 3)</div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Card navigazione -->
                <div class="card mt-4">
                    <div class="card-header bg-primary text-white">
                        <h6 class="mb-0"><i class="bi bi-compass"></i> Navigazione</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-action="Index" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-list"></i> Tutti i Centri
                            </a>
                            <a asp-action="Index" asp-route-attivo="true" class="btn btn-outline-success btn-sm">
                                <i class="bi bi-check-circle"></i> Solo Attivi
                            </a>
                            <a asp-action="Index" asp-route-hasCapacita="true" class="btn btn-outline-info btn-sm">
                                <i class="bi bi-speedometer2"></i> Con Capacità
                            </a>
                            <a asp-action="Index" asp-route-hasCosto="true" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-currency-euro"></i> Con Costo
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
