@model AiDbMaster.ViewModels.EditCentroLavoroViewModel

@{
    ViewData["Title"] = "Modifica Centro di Lavoro";
}

<div class="container">
    <div class="content-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-pencil me-2"></i>Modifica Centro di Lavoro</h2>
            <div>
                <a asp-action="Details" asp-route-id="@Model?.IdCentroLavoro" class="btn btn-outline-info">
                    <i class="bi bi-eye"></i> Dettagli
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Torna all'elenco
                </a>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="bi bi-building-gear"></i> Modifica Dati Centro di Lavoro
                            <small class="ms-2">ID: @Model?.IdCentroLavoro</small>
                        </h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            
                            <!-- Campi nascosti -->
                            <input type="hidden" asp-for="IdCentroLavoro" />
                            <input type="hidden" asp-for="DataCreazione" />
                            
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label asp-for="CodiceCentro" class="form-label">Codice Centro</label>
                                    <input asp-for="CodiceCentro" class="form-control" placeholder="Es: C001, FRES..." maxlength="10" />
                                    <div class="form-text">
                                        <i class="bi bi-info-circle"></i> Codice opzionale di massimo 10 caratteri
                                    </div>
                                    <span asp-validation-for="CodiceCentro" class="text-danger"></span>
                                </div>
                                
                                <div class="col-md-8 mb-3">
                                    <label asp-for="DescrizioneCentro" class="form-label">
                                        Descrizione Centro <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="DescrizioneCentro" class="form-control" 
                                           placeholder="Inserisci la descrizione del centro di lavoro..." 
                                           maxlength="100" required />
                                    <div class="form-text">
                                        <i class="bi bi-info-circle"></i> Campo obbligatorio, massimo 100 caratteri
                                    </div>
                                    <span asp-validation-for="DescrizioneCentro" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label asp-for="CapacitaOraria" class="form-label">Capacità Oraria</label>
                                    <div class="input-group">
                                        <input asp-for="CapacitaOraria" class="form-control" type="number" min="1" max="1000" 
                                               placeholder="Es: 100" />
                                        <span class="input-group-text">pezzi/h</span>
                                    </div>
                                    <div class="form-text">
                                        <i class="bi bi-info-circle"></i> Capacità produttiva oraria (opzionale)
                                    </div>
                                    <span asp-validation-for="CapacitaOraria" class="text-danger"></span>
                                </div>
                                
                                <div class="col-md-4 mb-3">
                                    <label asp-for="CostoOrarioStandard" class="form-label">Costo Orario Standard</label>
                                    <div class="input-group">
                                        <span class="input-group-text">€</span>
                                        <input asp-for="CostoOrarioStandard" class="form-control" type="number" step="0.01" 
                                               min="0.01" max="999.99" placeholder="Es: 25.50" />
                                        <span class="input-group-text">/h</span>
                                    </div>
                                    <div class="form-text">
                                        <i class="bi bi-info-circle"></i> Costo orario standard (opzionale)
                                    </div>
                                    <span asp-validation-for="CostoOrarioStandard" class="text-danger"></span>
                                </div>

                                <div class="col-md-4 mb-3">
                                    <div class="form-check form-switch mt-4">
                                        <input asp-for="Attivo" class="form-check-input" type="checkbox" />
                                        <label asp-for="Attivo" class="form-check-label">
                                            Centro di Lavoro Attivo
                                        </label>
                                    </div>
                                    <div class="form-text">
                                        <i class="bi bi-info-circle"></i> I centri inattivi non saranno visibili nelle selezioni
                                    </div>
                                    <span asp-validation-for="Attivo" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12 mb-3">
                                    <label asp-for="Note" class="form-label">Note</label>
                                    <textarea asp-for="Note" class="form-control" rows="3" maxlength="500" 
                                              placeholder="Inserisci eventuali note sul centro di lavoro..."></textarea>
                                    <div class="form-text">
                                        <i class="bi bi-info-circle"></i> Note aggiuntive (opzionale, massimo 500 caratteri)
                                    </div>
                                    <span asp-validation-for="Note" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Informazioni di sistema -->
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">Data Creazione</label>
                                    <div class="form-control-plaintext">
                                        <i class="bi bi-calendar-plus text-muted"></i>
                                        @Model?.DataCreazione.ToString("dd/MM/yyyy HH:mm:ss")
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">Ultima Modifica</label>
                                    <div class="form-control-plaintext">
                                        @if (Model?.DataUltimaModifica != null)
                                        {
                                            <i class="bi bi-calendar-check text-muted"></i>
                                            @Model.DataUltimaModifica?.ToString("dd/MM/yyyy HH:mm:ss")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Mai modificato</span>
                                        }
                                    </div>
                                </div>
                            </div>

                            <hr class="my-4">

                            <div class="d-flex justify-content-between">
                                <div>
                                    <small class="text-muted">
                                        <i class="bi bi-asterisk text-danger"></i> Campi obbligatori
                                    </small>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-warning">
                                        <i class="bi bi-check-circle"></i> Salva Modifiche
                                    </button>
                                    <a asp-action="Details" asp-route-id="@Model?.IdCentroLavoro" class="btn btn-info ms-2">
                                        <i class="bi bi-eye"></i> Visualizza
                                    </a>
                                    <a asp-action="Index" class="btn btn-secondary ms-2">
                                        <i class="bi bi-x-circle"></i> Annulla
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Card avvertimenti -->
                <div class="card mt-4">
                    <div class="card-header bg-warning text-dark">
                        <h6 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Attenzione</h6>
                    </div>
                    <div class="card-body">
                        <ul class="mb-0">
                            <li><strong>Modifica Codice:</strong> Cambiare il codice potrebbe influire su altri dati collegati</li>
                            <li><strong>Disattivazione:</strong> Disattivare un centro lo nasconderà dalle nuove selezioni</li>
                            <li><strong>Capacità e Costi:</strong> Le modifiche si riflettono sui calcoli degli ordini futuri</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Contatore caratteri per la descrizione
        document.getElementById('DescrizioneCentro').addEventListener('input', function() {
            const maxLength = 100;
            const currentLength = this.value.length;
            const remaining = maxLength - currentLength;
            
            let counter = document.getElementById('desc-counter');
            if (!counter) {
                counter = document.createElement('small');
                counter.id = 'desc-counter';
                counter.className = 'form-text';
                this.parentNode.appendChild(counter);
            }
            
            counter.innerHTML = `<i class="bi bi-type"></i> ${currentLength}/${maxLength} caratteri`;
            counter.className = remaining < 10 ? 'form-text text-warning' : 'form-text text-muted';
        });

        // Contatore caratteri per le note
        document.getElementById('Note').addEventListener('input', function() {
            const maxLength = 500;
            const currentLength = this.value.length;
            const remaining = maxLength - currentLength;
            
            let counter = document.getElementById('note-counter');
            if (!counter) {
                counter = document.createElement('small');
                counter.id = 'note-counter';
                counter.className = 'form-text';
                this.parentNode.appendChild(counter);
            }
            
            counter.innerHTML = `<i class="bi bi-type"></i> ${currentLength}/${maxLength} caratteri`;
            counter.className = remaining < 50 ? 'form-text text-warning' : 'form-text text-muted';
        });

        // Trasforma il codice in maiuscolo
        document.getElementById('CodiceCentro').addEventListener('input', function() {
            this.value = this.value.toUpperCase();
        });

        // Calcolo automatico costo giornaliero
        document.getElementById('CostoOrarioStandard').addEventListener('input', function() {
            const costoOrario = parseFloat(this.value);
            if (!isNaN(costoOrario) && costoOrario > 0) {
                const costoGiornaliero = costoOrario * 8;
                
                let info = document.getElementById('costo-info');
                if (!info) {
                    info = document.createElement('small');
                    info.id = 'costo-info';
                    info.className = 'form-text text-info';
                    this.parentNode.parentNode.appendChild(info);
                }
                
                info.innerHTML = `<i class="bi bi-calculator"></i> Costo giornaliero (8h): €${costoGiornaliero.toFixed(2)}`;
            }
        });

        // Conferma prima di disattivare
        document.getElementById('Attivo').addEventListener('change', function() {
            if (!this.checked) {
                if (!confirm('Sei sicuro di voler disattivare questo centro di lavoro? Non sarà più visibile nelle selezioni.')) {
                    this.checked = true;
                }
            }
        });

        // Trigger dei contatori al caricamento
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('DescrizioneCentro').dispatchEvent(new Event('input'));
            if (document.getElementById('Note').value) {
                document.getElementById('Note').dispatchEvent(new Event('input'));
            }
            if (document.getElementById('CostoOrarioStandard').value) {
                document.getElementById('CostoOrarioStandard').dispatchEvent(new Event('input'));
            }
        });
    </script>
}
