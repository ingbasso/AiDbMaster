@model IEnumerable<AiDbMaster.Models.ArticoliSostitutivi>

@{
    ViewData["Title"] = "Articoli Sostitutivi";
    ViewBag.UseFluidContainer = true;
    var search = ViewBag.CurrentSearch as string ?? "";
    var codiceArticolo = ViewBag.CurrentCodiceArticolo as string ?? "";
    var codiceArticoloSostitutivo = ViewBag.CurrentCodiceArticoloSostitutivo as string ?? "";
    var sortOrder = ViewBag.CurrentSort as string ?? "articolo";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var totalCount = ViewBag.TotalCount as int? ?? 0;
    var pageSize = ViewBag.PageSize as int? ?? 50;
    var codiciArticolo = ViewBag.CodiciArticolo as List<string> ?? new List<string>();
    var codiciArticoloSostitutivo = ViewBag.CodiciArticoloSostitutivo as List<string> ?? new List<string>();
    var totalArticoliPrincipali = ViewBag.TotalArticoliPrincipali as int? ?? 0;
    var totalArticoliSostitutivi = ViewBag.TotalArticoliSostitutivi as int? ?? 0;
    var totalConNote = ViewBag.TotalConNote as int? ?? 0;
}

<div class="container-fluid">


    <div class="content-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-arrow-left-right me-2 text-primary"></i>Articoli Sostitutivi</h2>
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-outline-secondary" onclick="resetFilters()">
                    <i class="bi bi-arrow-clockwise"></i> Reset Filtri
                </button>
                <button type="button" class="btn btn-success" onclick="exportToExcel()">
                    <i class="bi bi-file-earmark-excel"></i> Esporta Excel
                </button>
            </div>
        </div>

        <!-- Filtri -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filtri di Ricerca</h5>
            </div>
            <div class="card-body">
                <form method="get" asp-action="Index" id="filterForm">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label for="search" class="form-label">Ricerca Generale</label>
                            <input type="text" class="form-control" id="search" name="search" value="@search" 
                                   placeholder="Codice articolo, sostitutivo, note...">
                        </div>
                        <div class="col-md-2">
                            <label for="codiceArticolo" class="form-label">Articolo Principale</label>
                            <select class="form-select" id="codiceArticolo" name="codiceArticolo">
                                <option value="">Tutti gli articoli</option>
                                @foreach (var codice in codiciArticolo.Take(50))
                                {
                                    <option value="@codice" selected="@(codiceArticolo == codice)">@codice</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="codiceArticoloSostitutivo" class="form-label">Articolo Sostitutivo</label>
                            <select class="form-select" id="codiceArticoloSostitutivo" name="codiceArticoloSostitutivo">
                                <option value="">Tutti i sostitutivi</option>
                                @foreach (var codice in codiciArticoloSostitutivo.Take(50))
                                {
                                    <option value="@codice" selected="@(codiceArticoloSostitutivo == codice)">@codice</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label for="pageSize" class="form-label">Elementi per pagina</label>
                            <select class="form-select" id="pageSize" name="pageSize">
                                <option value="25" selected="@(pageSize == 25)">25</option>
                                <option value="50" selected="@(pageSize == 50)">50</option>
                                <option value="100" selected="@(pageSize == 100)">100</option>
                                <option value="200" selected="@(pageSize == 200)">200</option>
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search"></i> Cerca
                            </button>
                        </div>
                    </div>
                    <input type="hidden" name="sortOrder" value="@sortOrder">
                    <input type="hidden" name="page" value="1">
                </form>
            </div>
        </div>

        <!-- Statistiche -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Totale Relazioni</h6>
                                <h3 class="mb-0">@totalCount</h3>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-arrow-left-right" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Articoli Principali</h6>
                                <h3 class="mb-0">@totalArticoliPrincipali</h3>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-box" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Articoli Sostitutivi</h6>
                                <h3 class="mb-0">@totalArticoliSostitutivi</h3>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-boxes" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Con Note</h6>
                                <h3 class="mb-0">@totalConNote</h3>
                            </div>
                            <div class="align-self-center">
                                <i class="bi bi-sticky" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabella Articoli Sostitutivi -->
        <div class="card">
            <div class="card-header bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Elenco Relazioni di Sostituzione</h5>
                    <small class="text-muted">
                        Visualizzate @(Model?.Count() ?? 0) di @totalCount relazioni
                    </small>
                </div>
            </div>
            <div class="card-body p-0">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-striped mb-0" id="articoliSostitutiviTable">
                            <thead class="table-dark sticky-top">
                                <tr>
                                    <th>
                                        <a asp-action="Index" 
                                           asp-route-search="@search"
                                           asp-route-codiceArticolo="@codiceArticolo"
                                           asp-route-codiceArticoloSostitutivo="@codiceArticoloSostitutivo"
                                           asp-route-pageSize="@pageSize"
                                           asp-route-sortOrder="@(sortOrder == "articolo" ? "articolo_desc" : "articolo")"
                                           class="text-white text-decoration-none">
                                            Articolo Principale
                                            @if (sortOrder == "articolo")
                                            {
                                                <i class="bi bi-arrow-up"></i>
                                            }
                                            else if (sortOrder == "articolo_desc")
                                            {
                                                <i class="bi bi-arrow-down"></i>
                                            }
                                        </a>
                                    </th>
                                    <th class="text-center">
                                        <i class="bi bi-arrow-right text-white"></i>
                                    </th>
                                    <th>
                                        <a asp-action="Index" 
                                           asp-route-search="@search"
                                           asp-route-codiceArticolo="@codiceArticolo"
                                           asp-route-codiceArticoloSostitutivo="@codiceArticoloSostitutivo"
                                           asp-route-pageSize="@pageSize"
                                           asp-route-sortOrder="@(sortOrder == "sostitutivo" ? "sostitutivo_desc" : "sostitutivo")"
                                           class="text-white text-decoration-none">
                                            Articolo Sostitutivo
                                            @if (sortOrder == "sostitutivo")
                                            {
                                                <i class="bi bi-arrow-up"></i>
                                            }
                                            else if (sortOrder == "sostitutivo_desc")
                                            {
                                                <i class="bi bi-arrow-down"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" 
                                           asp-route-search="@search"
                                           asp-route-codiceArticolo="@codiceArticolo"
                                           asp-route-codiceArticoloSostitutivo="@codiceArticoloSostitutivo"
                                           asp-route-pageSize="@pageSize"
                                           asp-route-sortOrder="@(sortOrder == "note" ? "note_desc" : "note")"
                                           class="text-white text-decoration-none">
                                            Note
                                            @if (sortOrder == "note")
                                            {
                                                <i class="bi bi-arrow-up"></i>
                                            }
                                            else if (sortOrder == "note_desc")
                                            {
                                                <i class="bi bi-arrow-down"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>Azioni</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="articolo-sostitutivo-row">
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-box me-2 text-primary"></i>
                                                <strong>@Html.DisplayFor(modelItem => item.CodiceArticolo)</strong>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <i class="bi bi-arrow-right text-success" style="font-size: 1.2rem;"></i>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-boxes me-2 text-warning"></i>
                                                <strong>@Html.DisplayFor(modelItem => item.CodiceArticoloSostitutivo)</strong>
                                            </div>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.Note))
                                            {
                                                <div class="small">
                                                    <i class="bi bi-sticky me-1 text-info"></i>
                                                    <span class="text-truncate" style="max-width: 200px; display: inline-block;" 
                                                          title="@item.Note">@item.Note</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a asp-action="Details" 
                                                   asp-route-codiceArticolo="@item.CodiceArticolo"
                                                   asp-route-codiceArticoloSostitutivo="@item.CodiceArticoloSostitutivo"
                                                   class="btn btn-sm btn-outline-info" title="Visualizza Dettagli">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-secondary" 
                                                        onclick="copyToClipboard('@item.CodiceArticolo → @item.CodiceArticoloSostitutivo')" 
                                                        title="Copia Relazione">
                                                    <i class="bi bi-clipboard"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Paginazione -->
                    @if (totalPages > 1)
                    {
                        <div class="card-footer">
                            <nav aria-label="Navigazione pagine">
                                <ul class="pagination justify-content-center mb-0">
                                    @if (currentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-codiceArticolo="@codiceArticolo"
                                               asp-route-codiceArticoloSostitutivo="@codiceArticoloSostitutivo"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="1">
                                                <i class="bi bi-chevron-double-left"></i>
                                            </a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-codiceArticolo="@codiceArticolo"
                                               asp-route-codiceArticoloSostitutivo="@codiceArticoloSostitutivo"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="@(currentPage - 1)">
                                                <i class="bi bi-chevron-left"></i>
                                            </a>
                                        </li>
                                    }

                                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(totalPages, currentPage + 2); i++)
                                    {
                                        <li class="page-item @(i == currentPage ? "active" : "")">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-codiceArticolo="@codiceArticolo"
                                               asp-route-codiceArticoloSostitutivo="@codiceArticoloSostitutivo"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="@i">@i</a>
                                        </li>
                                    }

                                    @if (currentPage < totalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-codiceArticolo="@codiceArticolo"
                                               asp-route-codiceArticoloSostitutivo="@codiceArticoloSostitutivo"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="@(currentPage + 1)">
                                                <i class="bi bi-chevron-right"></i>
                                            </a>
                                        </li>
                                        <li class="page-item">
                                            <a class="page-link" asp-action="Index" 
                                               asp-route-search="@search"
                                               asp-route-codiceArticolo="@codiceArticolo"
                                               asp-route-codiceArticoloSostitutivo="@codiceArticoloSostitutivo"
                                               asp-route-pageSize="@pageSize"
                                               asp-route-sortOrder="@sortOrder"
                                               asp-route-page="@totalPages">
                                                <i class="bi bi-chevron-double-right"></i>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        </div>
                    }
                }
                else
                {
                    <div class="p-5 text-center">
                        <i class="bi bi-inbox text-primary" style="font-size: 4rem;"></i>
                        <h4 class="mt-3">Nessuna relazione di sostituzione trovata</h4>
                        @if (!string.IsNullOrEmpty(search) || !string.IsNullOrEmpty(codiceArticolo) || !string.IsNullOrEmpty(codiceArticoloSostitutivo))
                        {
                            <p class="text-muted">Prova a modificare i filtri di ricerca per visualizzare più risultati.</p>
                            <button type="button" class="btn btn-outline-primary mt-3" onclick="resetFilters()">
                                <i class="bi bi-arrow-clockwise"></i> Reset Filtri
                            </button>
                        }
                        else
                        {
                            <p class="text-muted">Non ci sono relazioni di sostituzione configurate.</p>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Reset dei filtri
        function resetFilters() {
            window.location.href = '@Url.Action("Index", "ArticoliSostitutivi")';
        }

        // Copia negli appunti
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                showToast('Relazione copiata negli appunti: ' + text, 'success');
            }).catch(function(err) {
                console.error('Errore nella copia: ', err);
                showToast('Errore nella copia della relazione', 'error');
            });
        }

        // Funzione per mostrare toast
        function showToast(message, type) {
            const toastContainer = document.getElementById('toast-container') || createToastContainer();
            const toast = document.createElement('div');
            toast.className = `toast align-items-center text-white bg-${type === 'success' ? 'success' : 'danger'} border-0`;
            toast.setAttribute('role', 'alert');
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">${message}</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            `;
            toastContainer.appendChild(toast);
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
            
            toast.addEventListener('hidden.bs.toast', function() {
                toast.remove();
            });
        }

        // Crea il container per i toast se non esiste
        function createToastContainer() {
            const container = document.createElement('div');
            container.id = 'toast-container';
            container.className = 'toast-container position-fixed bottom-0 end-0 p-3';
            container.style.zIndex = '1055';
            document.body.appendChild(container);
            return container;
        }

        // Esportazione Excel (placeholder)
        function exportToExcel() {
            showToast('Funzionalità di esportazione Excel da implementare', 'info');
        }

        // Auto-submit del form quando cambiano i filtri
        $(document).ready(function() {
            $('#codiceArticolo, #codiceArticoloSostitutivo, #pageSize').change(function() {
                $('#filterForm').submit();
            });

            // Ricerca in tempo reale con debounce
            let searchTimeout;
            $('#search').on('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(function() {
                    $('#filterForm').submit();
                }, 500);
            });

            // Evidenzia i termini di ricerca
            @if (!string.IsNullOrEmpty(search))
            {
                <text>
                highlightSearchTerms('@Html.Raw(Html.Encode(search))');
                </text>
            }
        });

        // Funzione per evidenziare i termini di ricerca
        function highlightSearchTerms(searchTerm) {
            if (!searchTerm) return;
            
            const regex = new RegExp(`(${searchTerm.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')})`, 'gi');
            $('.articolo-sostitutivo-row').each(function() {
                const $row = $(this);
                $row.find('td').each(function() {
                    const $cell = $(this);
                    const html = $cell.html();
                    const highlightedHtml = html.replace(regex, '<mark class="bg-warning">$1</mark>');
                    $cell.html(highlightedHtml);
                });
            });
        }
    </script>
}
