    <!-- Script avanzato per sidebar -->
    <script>
        $(document).ready(function() {
            console.log('jQuery loaded, DOM ready!'); // Debug
            
            // Verifica che gli elementi esistano
            console.log('Sidebar element:', $('#sidebar').length); // Debug
            console.log('Toggle button:', $('#sidebarToggle').length); // Debug
            console.log('Overlay element:', $('#sidebarOverlay').length); // Debug
            
            // ===== GESTIONE SIDEBAR AVANZATA =====
            
            // Chiavi localStorage
            const SIDEBAR_STATE_KEY = 'aidbmaster_sidebar_state';
            const SUBMENU_STATE_KEY = 'aidbmaster_submenu_states';
            
            // Funzioni di utilità
            function isSmallMobile() {
                return window.innerWidth <= 576;
            }
            
            function isMobile() {
                return window.innerWidth <= 768;
            }
            
            function isDesktop() {
                return window.innerWidth > 768;
            }
            
            // Carica stato sidebar da localStorage
            function loadSidebarState() {
                if (!isSmallMobile()) { // Carica stato per tablet e desktop
                    const savedState = localStorage.getItem(SIDEBAR_STATE_KEY);
                    console.log('Loading sidebar state:', savedState); // Debug
                    if (savedState === 'open') {
                        console.log('Restoring sidebar to open state'); // Debug
                        openSidebar(false); // false = non salvare di nuovo
                    } else {
                        console.log('Sidebar state is closed or not set'); // Debug
                    }
                } else {
                    console.log('Small mobile detected, not loading sidebar state'); // Debug
                }
            }
            
            // Salva stato sidebar in localStorage
            function saveSidebarState(isOpen) {
                if (!isSmallMobile()) { // Salva stato per tablet e desktop
                    localStorage.setItem(SIDEBAR_STATE_KEY, isOpen ? 'open' : 'closed');
                }
            }
            
            // Apri sidebar
            function openSidebar(save = true) {
                console.log('Opening sidebar...'); // Debug
                $('#sidebar').addClass('active');
                $('#sidebarOverlay').addClass('active');
                $('body').addClass('sidebar-open');
                
                if (save) {
                    saveSidebarState(true);
                }
                console.log('Sidebar opened!'); // Debug
            }
            
            // Chiudi sidebar
            function closeSidebar(save = true) {
                console.log('Closing sidebar...'); // Debug
                 $('#sidebar').removeClass('active');
                 $('#sidebarOverlay').removeClass('active');
                 $('body').removeClass('sidebar-open');
                
                if (save) {
                    saveSidebarState(false);
                }
                console.log('Sidebar closed!'); // Debug
            }
            
            // Toggle sidebar
            function toggleSidebar() {
                const isOpen = $('#sidebar').hasClass('active');
                console.log('Toggle sidebar - currently open:', isOpen); // Debug
                if (isOpen) {
                    closeSidebar();
                } else {
                    openSidebar();
                }
            }
            
            // ===== PULIZIA E INIZIALIZZAZIONE EVENT LISTENERS =====
            
            // Funzione per pulire tutti gli event listener esistenti
            function cleanupEventListeners() {
                $('#sidebarToggle').off('click');
                $('#sidebarOverlay').off('click');
                $('.sidebar-toggle').off('click');
                $('.sidebar-nav .sidebar-link:not(.sidebar-toggle)').off('click');
                $('#sidebar .sidebar-header, #sidebar .sidebar-footer, #sidebar .sidebar-content').off('click');
                console.log('Event listeners cleaned up'); // Debug
            }
            
            // Pulisci event listener esistenti
            cleanupEventListeners();
            
            // ===== EVENT LISTENERS =====
            
            // Toggle sidebar con prevenzione doppio click integrata
            let isToggling = false;
            $('#sidebarToggle').on('click', function(e) {
                e.preventDefault();
                console.log('Hamburger clicked!'); // Debug
                
                if (isToggling) {
                    console.log('Still toggling, ignoring click'); // Debug
                    return false;
                }
                
                isToggling = true;
                toggleSidebar();
                
                setTimeout(() => {
                    isToggling = false;
                }, 300);
            });
            
            // Chiudi sidebar cliccando sull'overlay (solo su mobile piccolo)
            $('#sidebarOverlay').on('click', function() {
                console.log('Overlay clicked!'); // Debug
                if (isSmallMobile()) {
                    closeSidebar();
                }
            });
            
            // ===== GESTIONE MENU ATTIVO =====
            
            // Imposta menu attivo basato sull'URL corrente
            function setActiveMenuItem() {
                const currentPath = window.location.pathname.toLowerCase();
                console.log('Setting active menu item for path:', currentPath); // Debug
                
                $('.sidebar-nav .sidebar-link').removeClass('active');
                
                let foundActiveItem = false;
                $('.sidebar-nav .sidebar-link').each(function() {
                    const linkHref = $(this).attr('href');
                    if (linkHref && linkHref !== '#') {
                        const linkPath = new URL(linkHref, window.location.origin).pathname.toLowerCase();
                        if (currentPath === linkPath || (linkPath !== '/' && currentPath.startsWith(linkPath))) {
                            $(this).addClass('active');
                            foundActiveItem = true;
                            console.log('Found active menu item:', $(this).text().trim(), 'Path:', linkPath); // Debug
                            
                            // Se è in un sottomenu, apri il sottomenu padre
                            const parentCollapse = $(this).closest('.collapse');
                            if (parentCollapse.length) {
                                console.log('Opening parent submenu:', parentCollapse.attr('id')); // Debug
                                parentCollapse.addClass('show');
                                const toggleButton = $(`[data-bs-target="#${parentCollapse.attr('id')}"]`);
                                toggleButton.find('.toggle-icon').addClass('rotated');
                            }
                        }
                    }
                });
                
                if (!foundActiveItem) {
                    console.log('No active menu item found for current path'); // Debug
                }
            }
            
            // ===== GESTIONE SOTTOMENU COLLASSABILI =====
            
            // Carica stati sottomenu da localStorage
            function loadSubmenuStates() {
                const savedStates = localStorage.getItem(SUBMENU_STATE_KEY);
                if (savedStates) {
                    const states = JSON.parse(savedStates);
                    Object.keys(states).forEach(submenuId => {
                        if (states[submenuId]) {
                            $(`#${submenuId}`).addClass('show');
                            $(`[data-bs-target="#${submenuId}"]`).find('.toggle-icon').addClass('rotated');
                        }
                    });
                }
            }
            
            // Salva stato sottomenu in localStorage
            function saveSubmenuState(submenuId, isOpen) {
                const savedStates = localStorage.getItem(SUBMENU_STATE_KEY);
                const states = savedStates ? JSON.parse(savedStates) : {};
                states[submenuId] = isOpen;
                localStorage.setItem(SUBMENU_STATE_KEY, JSON.stringify(states));
            }
            
            // Gestione click sui toggle dei sottomenu (con prevenzione event listener duplicati)
            $('.sidebar-toggle').off('click').on('click', function(e) {
                e.preventDefault();
                e.stopPropagation(); // Previeni propagazione
                console.log('Submenu toggle clicked:', $(this).text().trim()); // Debug
                
                const target = $(this).attr('data-bs-target');
                const submenuId = target.replace('#', '');
                const $submenu = $(target);
                const $icon = $(this).find('.toggle-icon');
                
                $submenu.collapse('toggle');
                
                // Rimuovi event listener esistenti per evitare duplicati
                $submenu.off('shown.bs.collapse hidden.bs.collapse');
                
                // Gestisci rotazione icona e salvataggio stato
                $submenu.on('shown.bs.collapse', function() {
                    $icon.addClass('rotated');
                    saveSubmenuState(submenuId, true);
                });
                
                $submenu.on('hidden.bs.collapse', function() {
                    $icon.removeClass('rotated');
                    saveSubmenuState(submenuId, false);
                });
            });
            
            // ===== CHIUSURA AUTOMATICA SU MOBILE =====
            
            // Gestione click sui link della sidebar
            $('.sidebar-nav .sidebar-link:not(.sidebar-toggle)').off('click').on('click', function(e) {
                console.log('Menu link clicked:', $(this).text().trim()); // Debug
                console.log('Link href:', $(this).attr('href')); // Debug
                console.log('Is small mobile:', isSmallMobile()); // Debug
                
                // Su mobile piccolo, chiudi la sidebar dopo la navigazione
                if (isSmallMobile()) {
                    console.log('Mobile detected, will close sidebar'); // Debug
                    setTimeout(() => {
                        closeSidebar();
                    }, 150); // Piccolo delay per permettere la navigazione
                } else {
                    // Su desktop, mantieni la sidebar aperta
                    console.log('Desktop detected, keeping sidebar open'); // Debug
                }
            });
            
            // Previeni chiusura sidebar quando si clicca su aree non interattive
            $('#sidebar .sidebar-header, #sidebar .sidebar-footer, #sidebar .sidebar-content').on('click', function(e) {
                // Solo per click su aree non-link
                if (!$(e.target).closest('a, button').length) {
                    e.stopPropagation();
                    console.log('Click on non-interactive sidebar area - prevented propagation'); // Debug
                }
            });
            
            // ===== GESTIONE RESIZE FINESTRA =====
            
            $(window).resize(function() {
                // Su mobile piccolo, chiudi sempre la sidebar quando si ridimensiona
                if (isSmallMobile() && $('#sidebar').hasClass('active')) {
                    closeSidebar(false); // Non salvare lo stato
                }
                
                // Se si passa da mobile a desktop, ricarica lo stato salvato
                if (!isSmallMobile()) {
                    loadSidebarState();
                }
            });
            
            // ===== INIZIALIZZAZIONE =====
            
            // Carica stati salvati
            loadSidebarState();
            loadSubmenuStates();
            setActiveMenuItem();
            
            // ===== MANTENIMENTO STATO DURANTE NAVIGAZIONE =====
            
            // Forza il mantenimento dello stato della sidebar durante la navigazione
            $(window).on('beforeunload', function() {
                // Salva lo stato corrente prima di navigare
                const isOpen = $('#sidebar').hasClass('active');
                console.log('Page unloading, saving sidebar state:', isOpen ? 'open' : 'closed'); // Debug
                saveSidebarState(isOpen);
            });
            
            // Ripristina lo stato dopo il caricamento della pagina
            $(window).on('load', function() {
                console.log('Page loaded, checking sidebar state'); // Debug
                setTimeout(() => {
                    loadSidebarState();
                    setActiveMenuItem();
                }, 100); // Piccolo delay per assicurarsi che tutto sia caricato
            });
            
            // ===== PULSANTE "TORNA IN ALTO" =====
            
            var scrollToTop = $('#scrollToTop');
            
            $(window).scroll(function() {
                if ($(this).scrollTop() > 300) {
                    scrollToTop.addClass('visible');
                } else {
                    scrollToTop.removeClass('visible');
                }
            });
            
            scrollToTop.click(function() {
                $('html, body').animate({scrollTop: 0}, 500);
                return false;
            });
            
            // ===== SUPPORTO KEYBOARD E ACCESSIBILITÀ =====
            
            // Chiudi sidebar con tasto ESC
            $(document).keydown(function(e) {
                if (e.key === 'Escape' && $('#sidebar').hasClass('active')) {
                    closeSidebar();
                }
            });
            
            // Gestione focus per accessibilità
            $('#sidebarToggle').on('focus', function() {
                $(this).addClass('focus-visible');
            }).on('blur', function() {
                $(this).removeClass('focus-visible');
            });
            
            // Trap focus nella sidebar quando è aperta
            $('#sidebar').on('keydown', function(e) {
                if (e.key === 'Tab') {
                    const focusableElements = $('#sidebar').find('a, button, [tabindex]:not([tabindex="-1"])');
                    const firstElement = focusableElements.first();
                    const lastElement = focusableElements.last();
                    
                    if (e.shiftKey) {
                        if (document.activeElement === firstElement[0]) {
                            e.preventDefault();
                            lastElement.focus();
                        }
                    } else {
                        if (document.activeElement === lastElement[0]) {
                            e.preventDefault();
                            firstElement.focus();
                        }
                    }
                }
            });
            
            // ===== ANIMAZIONI FLUIDE AGGIUNTIVE =====
            
            // Aggiungi classe per animazioni quando sidebar si apre/chiude
            $('#sidebar').on('transitionstart', function() {
                $('body').addClass('sidebar-transitioning');
            }).on('transitionend', function() {
                $('body').removeClass('sidebar-transitioning');
            });
            
            // Prevenzione doppio click già integrata sopra
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
