@model AiDbMaster.Models.Lavorazioni

@{
    ViewData["Title"] = "Modifica Lavorazione";
}

<div class="container">
    <div class="content-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-pencil me-2"></i>Modifica Lavorazione</h2>
            <div>
                <a asp-action="Details" asp-route-id="@Model?.IdLavorazione" class="btn btn-outline-info">
                    <i class="bi bi-eye"></i> Dettagli
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Torna all'elenco
                </a>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="bi bi-gear-wide"></i> Modifica Dati Lavorazione
                            <small class="ms-2">ID: @Model?.IdLavorazione</small>
                        </h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            
                            <!-- Campi nascosti -->
                            <input type="hidden" asp-for="IdLavorazione" />
                            <input type="hidden" asp-for="DataCreazione" />
                            
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label asp-for="CodiceLavorazione" class="form-label">Codice Lavorazione</label>
                                    <input asp-for="CodiceLavorazione" class="form-control" placeholder="Es: A, B, C..." maxlength="1" />
                                    <div class="form-text">
                                        <i class="bi bi-info-circle"></i> Codice opzionale di 1 carattere
                                    </div>
                                    <span asp-validation-for="CodiceLavorazione" class="text-danger"></span>
                                </div>
                                
                                <div class="col-md-8 mb-3">
                                    <label asp-for="DescrizioneLavorazione" class="form-label">
                                        Descrizione Lavorazione <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="DescrizioneLavorazione" class="form-control" 
                                           placeholder="Inserisci la descrizione della lavorazione..." 
                                           maxlength="100" required />
                                    <div class="form-text">
                                        <i class="bi bi-info-circle"></i> Campo obbligatorio, massimo 100 caratteri
                                    </div>
                                    <span asp-validation-for="DescrizioneLavorazione" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="form-check form-switch">
                                        <input asp-for="Attivo" class="form-check-input" type="checkbox" />
                                        <label asp-for="Attivo" class="form-check-label">
                                            Lavorazione Attiva
                                        </label>
                                    </div>
                                    <div class="form-text">
                                        <i class="bi bi-info-circle"></i> Le lavorazioni inattive non saranno visibili nelle selezioni
                                    </div>
                                    <span asp-validation-for="Attivo" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Informazioni di sistema -->
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">Data Creazione</label>
                                    <div class="form-control-plaintext">
                                        <i class="bi bi-calendar-plus text-muted"></i>
                                        @Model?.DataCreazione.ToString("dd/MM/yyyy HH:mm:ss")
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label text-muted">Ultima Modifica</label>
                                    <div class="form-control-plaintext">
                                        @if (Model?.DataUltimaModifica != null)
                                        {
                                            <i class="bi bi-calendar-check text-muted"></i>
                                            @Model.DataUltimaModifica?.ToString("dd/MM/yyyy HH:mm:ss")
                                        }
                                        else
                                        {
                                            <span class="text-muted">Mai modificata</span>
                                        }
                                    </div>
                                </div>
                            </div>

                            <hr class="my-4">

                            <div class="d-flex justify-content-between">
                                <div>
                                    <small class="text-muted">
                                        <i class="bi bi-asterisk text-danger"></i> Campi obbligatori
                                    </small>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-warning">
                                        <i class="bi bi-check-circle"></i> Salva Modifiche
                                    </button>
                                    <a asp-action="Details" asp-route-id="@Model?.IdLavorazione" class="btn btn-info ms-2">
                                        <i class="bi bi-eye"></i> Visualizza
                                    </a>
                                    <a asp-action="Index" class="btn btn-secondary ms-2">
                                        <i class="bi bi-x-circle"></i> Annulla
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Card informativa -->
                <div class="card mt-4">
                    <div class="card-header bg-warning text-dark">
                        <h6 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Attenzione</h6>
                    </div>
                    <div class="card-body">
                        <ul class="mb-0">
                            <li><strong>Modifica Codice:</strong> Cambiare il codice potrebbe influire su altri dati collegati</li>
                            <li><strong>Disattivazione:</strong> Disattivare una lavorazione la nasconderà dalle nuove selezioni</li>
                            <li><strong>Descrizione:</strong> Modifiche alla descrizione si riflettono immediatamente in tutto il sistema</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Contatore caratteri per la descrizione
        document.getElementById('DescrizioneLavorazione').addEventListener('input', function() {
            const maxLength = 100;
            const currentLength = this.value.length;
            const remaining = maxLength - currentLength;
            
            // Trova o crea l'elemento contatore
            let counter = document.getElementById('desc-counter');
            if (!counter) {
                counter = document.createElement('small');
                counter.id = 'desc-counter';
                counter.className = 'form-text';
                this.parentNode.appendChild(counter);
            }
            
            counter.innerHTML = `<i class="bi bi-type"></i> ${currentLength}/${maxLength} caratteri`;
            counter.className = remaining < 10 ? 'form-text text-warning' : 'form-text text-muted';
        });

        // Trasforma il codice in maiuscolo
        document.getElementById('CodiceLavorazione').addEventListener('input', function() {
            this.value = this.value.toUpperCase();
        });

        // Conferma prima di disattivare
        document.getElementById('Attivo').addEventListener('change', function() {
            if (!this.checked) {
                if (!confirm('Sei sicuro di voler disattivare questa lavorazione? Non sarà più visibile nelle selezioni.')) {
                    this.checked = true;
                }
            }
        });

        // Trigger del contatore caratteri al caricamento
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('DescrizioneLavorazione').dispatchEvent(new Event('input'));
        });
    </script>
}
