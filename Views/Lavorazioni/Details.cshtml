@model AiDbMaster.Models.Lavorazioni

@{
    ViewData["Title"] = "Dettagli Lavorazione";
}

<div class="container">
    <div class="content-container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="bi bi-eye me-2"></i>Dettagli Lavorazione</h2>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.IdLavorazione" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Modifica
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Torna all'elenco
                </a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <!-- Card principale con i dati -->
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-gear-wide"></i> Informazioni Lavorazione
                            <span class="badge bg-light text-dark ms-2">ID: @Model?.IdLavorazione</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label text-muted">Codice Lavorazione</label>
                                <div class="form-control-plaintext">
                                    @if (!string.IsNullOrEmpty(Model?.CodiceLavorazione))
                                    {
                                        <span class="badge bg-primary fs-6">@Model.CodiceLavorazione</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Non specificato</span>
                                    }
                                </div>
                            </div>
                            
                            <div class="col-md-8 mb-3">
                                <label class="form-label text-muted">Descrizione Lavorazione</label>
                                <div class="form-control-plaintext">
                                    <strong class="fs-5">@Model?.DescrizioneLavorazione</strong>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted">Stato</label>
                                <div class="form-control-plaintext">
                                    @if (Model?.Attivo == true)
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="bi bi-check-circle"></i> Attiva
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary fs-6">
                                            <i class="bi bi-pause-circle"></i> Inattiva
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Informazioni di sistema -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted">
                                    <i class="bi bi-calendar-plus"></i> Data Creazione
                                </label>
                                <div class="form-control-plaintext">
                                    @Model?.DataCreazione.ToString("dddd, dd MMMM yyyy 'alle' HH:mm:ss", new System.Globalization.CultureInfo("it-IT"))
                                </div>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label class="form-label text-muted">
                                    <i class="bi bi-calendar-check"></i> Ultima Modifica
                                </label>
                                <div class="form-control-plaintext">
                                    @if (Model?.DataUltimaModifica != null)
                                    {
                                        @Model.DataUltimaModifica?.ToString("dddd, dd MMMM yyyy 'alle' HH:mm:ss", new System.Globalization.CultureInfo("it-IT"))
                                    }
                                    else
                                    {
                                        <span class="text-muted">Mai modificata</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Card azioni rapide -->
                <div class="card mt-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-lightning"></i> Azioni Rapide</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2 d-md-flex">
                            <a asp-action="Edit" asp-route-id="@Model?.IdLavorazione" class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Modifica Lavorazione
                            </a>
                            <a asp-action="Create" class="btn btn-success">
                                <i class="bi bi-plus-circle"></i> Nuova Lavorazione
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model?.IdLavorazione" class="btn btn-outline-danger">
                                <i class="bi bi-trash"></i> Elimina
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <!-- Card statistiche/informazioni aggiuntive -->
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        <h6 class="mb-0"><i class="bi bi-info-circle"></i> Informazioni Aggiuntive</h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <small class="text-muted">ID Univoco</small>
                            <div class="fw-bold">#@Model?.IdLavorazione</div>
                        </div>
                        
                        <div class="mb-3">
                            <small class="text-muted">Lunghezza Descrizione</small>
                            <div class="fw-bold">@(Model?.DescrizioneLavorazione?.Length ?? 0) caratteri</div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model?.CodiceLavorazione))
                        {
                            <div class="mb-3">
                                <small class="text-muted">Codice ASCII</small>
                                <div class="fw-bold">@((int)Model.CodiceLavorazione[0])</div>
                            </div>
                        }

                        <div class="mb-3">
                            <small class="text-muted">Giorni dalla creazione</small>
                            <div class="fw-bold">@((DateTime.Now - Model?.DataCreazione)?.Days ?? 0) giorni</div>
                        </div>
                    </div>
                </div>

                <!-- Card navigazione -->
                <div class="card mt-4">
                    <div class="card-header bg-primary text-white">
                        <h6 class="mb-0"><i class="bi bi-compass"></i> Navigazione</h6>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-action="Index" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-list"></i> Tutte le Lavorazioni
                            </a>
                            <a asp-action="Index" asp-route-attivo="true" class="btn btn-outline-success btn-sm">
                                <i class="bi bi-check-circle"></i> Solo Attive
                            </a>
                            <a asp-action="Index" asp-route-attivo="false" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-pause-circle"></i> Solo Inattive
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Card suggerimenti -->
                <div class="card mt-4">
                    <div class="card-header bg-info text-white">
                        <h6 class="mb-0"><i class="bi bi-lightbulb"></i> Suggerimenti</h6>
                    </div>
                    <div class="card-body">
                        <small>
                            <ul class="mb-0">
                                <li>Usa il codice per identificazioni rapide</li>
                                <li>Mantieni descrizioni chiare e specifiche</li>
                                <li>Disattiva invece di eliminare per mantenere lo storico</li>
                            </ul>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Copia negli appunti
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                // Mostra un toast o notifica
                const toast = document.createElement('div');
                toast.className = 'alert alert-success position-fixed top-0 end-0 m-3';
                toast.style.zIndex = '9999';
                toast.innerHTML = '<i class="bi bi-check-circle"></i> Copiato negli appunti!';
                document.body.appendChild(toast);
                
                setTimeout(() => {
                    toast.remove();
                }, 2000);
            });
        }

        // Aggiungi click handler per copiare l'ID
        document.addEventListener('DOMContentLoaded', function() {
            const idElement = document.querySelector('.fw-bold');
            if (idElement) {
                idElement.style.cursor = 'pointer';
                idElement.title = 'Clicca per copiare';
                idElement.addEventListener('click', function() {
                    copyToClipboard(this.textContent);
                });
            }
        });
    </script>
}
